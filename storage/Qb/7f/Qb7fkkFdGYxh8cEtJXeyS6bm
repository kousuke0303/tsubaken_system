    <script>
            var vm1 = new Vue({
                el: "#app1",
                data: {
                    ok: true,
                    maybeOK: false,
                    fruits: ['りんご', 'ばなな', '椎茸'],
                    objects: {
                        firstname: '太郎',
                        lastname: '田中',
                        age: 21 
                    },
                },
            })

            var vm2 = new Vue({
                el: "#app2",
                data: {
                    ok: true,
                    maybeOK: false,
                    fruits: ['りんご', 'ばなな', '椎茸'],
                    objects: {
                        firstname: '太郎',
                        lastname: '田中',
                        age: 21 
                    },
                },
                methods: {
                    ChangeFirstname: function() {
                        vm1.objects.firstname = "名前が変わりました"
                    }
                },
            })

            new Vue({
               data: {
                   name: 'よしぴー',
               },
               template: '<h1>こんにちは、{{ name }}</h1>'
            }).$mount('#app3')

            new Vue({
               data: {
                   name: 'よしぴー',
               },
               render: function(h) {
                   console.log(h('h1', 'こんにちは' + this.name));
                 return h('h1', 'こんにちは' + this.name);
               }
            }).$mount('#app4')

            var dir = document.createElement('div');
              
            console.log(dir);
            console.log(vm2);
            console.log(document);
            console.dir(document);
    </script>
