    <div id="app1">
        <temnplate v-if="ok">
           <p>Hello</p>
           <p>Hello</p>
           <p>Hello</p>
        </temnplate>
        <button @click="ok = !ok">ボタン</button>
        <p v-if="ok">OK!</p>
        <p v-else-if="maybeOK">maybe OK!</p>
        <p v-else>Not OK...</p>
        <ul>
            <li v-for="(fruit, index) of fruits">({{ index }})_{{ fruit }}</li>
            <li v-for="(value, key, index) of objects">({”{ index }})_{{ key }}-{{ value }}</li>
            <template v-for="fruit of fruits">
                <li>{{ fruit }}</li>
                <hr>
            </template>
            <li v-for="n of 10">{{ n }}</li>
        </ul>
    </div>

    <div id="app2">
            <temnplate v-if="ok">
               <p>Hello</p>
               <p>Hello</p>
               <p>Hello</p>
            </temnplate>
            <button @click="ok = !ok">ボタン</button>
            <p v-if="ok">OK!</p>
            <p v-else-if="maybeOK">maybe OK!</p>
            <p v-else>Not OK...</p>
            <ul>
                <li v-for="(fruit, index) of fruits">({{ index }})_{{ fruit }}</li>
                <li v-for="(value, key, index) of objects">({”{ index }})_{{ key }}-{{ value }}</li>
                <template v-for="fruit of fruits">
                    <li>{{ fruit }}</li>
                    <hr>
                </template>
                <li v-for="n of 10">{{ n }}</li>
            </ul>
            <button @click="ChangeFirstname">名前が変わります。</button>
        </div>

        <div id="app3">

