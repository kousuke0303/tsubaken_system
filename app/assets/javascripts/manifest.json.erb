<% icon_sizes = Rails.configuration.serviceworker.icon_sizes %>
{
  "name": "ツバケン",
  "short_name": "ツバケン",
  "start_url": "/",
  "icons": [
  <% icon_sizes.map { |s| "#{s}x#{s}" }.each.with_index do |dim, i| %>
    {
      "src": "<%= image_path "/appicon/icon-#{dim}.png" %>",
      "sizes": "<%= dim %>",
      "type": "image/png",
      "purpose": "any"
    },
  <% end %>
    {
      "src": "<%= image_path "/appicon/maskable-icon-196x196.png" %>",
      "sizes": "196x196",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "theme_color": "#000000",
  "background_color": "#FFFFFF",
  "display": "standalone",
  "orientation": "portrait"
}