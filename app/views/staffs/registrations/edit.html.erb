<div class="col-lg-12 col-md-12">
  <h2>アカウント編集</h2>
  <div class = "show_avator_staff mx-auto my-2">
    <%= avator(current_staff) %>
  </div>

  <div class="card text-center tab-wrapper">
    <div class="card-header bg-dark"></div>
    <div class="card-body">
      <%= form_with(model:@staff, url: staff_registration_path, local: true) do |f| %>
        <%= render "shared/error_messages", resource: resource %>

        <%= f.label :name, class: "float-l" %>
        <%= f.text_field :name, maxlength: 30, required: true, class: "form-control" %>

        <%= f.label :login_id, class: "float-l" %>
        <%= f.text_field :logine_id, maxlength: 12, required: true, class: "form-control" %>

        <%= f.label :phone, class: "float-l" %>
        <%= f.telephone_field :phone, class: "form-control", pattern: "^0\[0-9]{2,3}\[0-9]{1,4}\[0-9]{4}$", maxlength: 11, placeholder: "半角数字(ハイフンなし)" %>

        <%= f.label :email, class: "float-l" %>
        <%= f.email_field :email, maxlength: 254, required: true, class: "form-control" %>

        <%= f.label :zip_code, class: "float-l" %>
        <%= f.text_field :zip_code, maxlength: 7, pattern: "^[0-9]{7}$", class: "form-control", placeholder: "半角数字(ハイフンなし)" %>

        <%= f.label :birthed_on, class: "float-l" %>
        <%= f.date_field :birthed_on, class: "form-control" %>

        <%= f.label :address, class: "float-l" %>
        <%= f.text_field :address, maxlength: 50, class: "form-control" %>

        <%= f.label :joined_on, class: "float-l" %>
        <%= f.date_field :joined_on, class: "form-control" %>

        <%= f.label :resigned_on, class: "float-l" %>
        <%= f.date_field :resigned_on, class: "form-control" %>

        <%= f.label :password, class: "float-l" %>
        <%= f.password_field :password, maxlength: 12, class: "form-control" %>

        <%= f.label :password_confirmation, class: "float-l" %>
        <%= f.password_field :password_confirmation, maxlength: 12, class: "form-control" %>

        <div class="btn-area">
          <%= f.submit "更新", class: "btn btn-dark" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% if @staff.errors.any? %>
  <script>
    $(document).ready(function() {
      history.pushState("", "", location.href + "/edit")
    });
  </script>
<% end %>
