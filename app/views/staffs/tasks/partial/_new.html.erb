<div class="modal-dialog non-card-modal">
  <div class="modal-content">
    <div class="modal-header">
      個別タスク作成
      <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
      <%= form_with(model: @task, url: staffs_tasks_path, method: :post, remote: true) do |f| %>
        <div class="task-create-errors"></div>
        <%= render 'staffs/tasks/partial/form', f: f %>
        <div class="btn-area">
          <%= f.submit "作成", class: "btn btn-dark reset-errors" %>
        </div>
      <% end %>
    </div>
  </div>
</div>