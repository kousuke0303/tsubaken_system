<% if @creation_schedules %>
  $('#top-page-modal').html('<%= escape_javascript(render 'shared/top_pages/information/notifications/schedule/creation_notification') %>');
<% elsif @updation_schedules %>
  $('#top-page-modal').html('<%= escape_javascript(render 'shared/top_pages/information/notifications/schedule/updation_notification') %>');
<% elsif @deletion_notification_for_schedules %>
  $('#top-page-modal').html('<%= escape_javascript(render 'shared/top_pages/information/notifications/schedule/deletion_notification') %>');
<% end %>
$('#top-page-modal').modal();