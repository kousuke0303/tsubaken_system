$('#modal-container').empty();
<% if @creation_tasks %>
  $('#modal-container').html('<%= escape_javascript(render 'shared/top_pages/information/notifications/tasks/creation_notification') %>');
<% elsif @notifications_for_update_task %>
  $('#modal-container').html('<%= escape_javascript(render 'shared/top_pages/information/notifications/tasks/updation_notification') %>');
<% elsif @deletion_notification_for_tasks %>
  $('#modal-container').html('<%= escape_javascript(render 'shared/top_pages/information/notifications/tasks/deletion_notification') %>');
<% end %>
$('#modal-container').modal();