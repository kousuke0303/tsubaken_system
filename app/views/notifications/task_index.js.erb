$('#top-page-modal').empty();
<% if @creation_tasks %>
  $('#top-page-modal').html('<%= escape_javascript(render 'shared/top_pages/information/notifications/tasks/creation_notification') %>');
<% elsif @notifications_for_update_task %>
  $('#top-page-modal').html('<%= escape_javascript(render 'shared/top_pages/information/notifications/tasks/updation_notification') %>');
<% elsif @deletion_notification_for_tasks %>
  $('#top-page-modal').html('<%= escape_javascript(render 'shared/top_pages/information/notifications/tasks/deletion_notification') %>');
<% end %>
$('#top-page-modal').modal();