<div class="manager_create_backgroud">
  <div class="manager_create_container">
    <div class="row">
      <h2 class="col-md-6"><i class="fas fa-user-alt"></i> アカウント新規作成</h2>
      <div class="col-md-6">
        <%= link_to "戻る", root_path, class: "btn btn-dark float-r" %>
      </div>
    </div>
    <div class="line-sm"></div>
  
    <%= form_with(model:@manager, url: manager_registration_path, local: true) do |f| %>
      <%= render "shared/error_messages", resource: resource %>
    
      <div class="form-group">
        <%= f.label :name, "名前" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
      </div>
    
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.label :phone, "電話番号" %>
        <%= f.telephone_field :phone, class: "form-control", pattern: "^0\[0-9]{2,3}\[0-9]{1,4}\[0-9]{4}$" %>
        <small class="form-text text-muted">半角数字のみ（ハイフンなし）</small>
      </div>
    
      <div class="row">
        <div class="form-group col-md-6">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>
    
        <div class="form-group col-md-6">
          <%= f.label :password_confirmation, "パスワード再入力" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>
      </div>
  
      <div class="text-right">
        <%= f.submit "Sign up", class: "btn btn-dark" %>
      </div>
    <% end %>

  </div>
</div>
