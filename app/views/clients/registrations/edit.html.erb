<div class=" col-lg-12 col-md-12">
  <h2>アカウント編集</h2>
  <div class = "show_avator_client mx-auto">
    <%= avator(current_client) %>
  </div>

  <div class="card text-center tab-wrapper">
    <div class="card-header bg-dark"></div>
    <div class="card-body">
      <%= form_with(model: @client, url: client_registration_path, local: true) do |f| %>
        <%= render "shared/error_messages", resource: @client %>

        <%= f.label :name %>
        <%= f.text_field :name, maxlength: 30, required: true, class: "form-control" %>
        
        <%= f.label :phone_1 %>
        <%= f.telephone_field :phone_1, class: "form-control", pattern: "^0\[0-9]{2,3}\[0-9]{1,4}\[0-9]{4}$", maxlength: 11, placeholder: "半角数字(ハイフンなし)" %>
        
        <%= f.label :phone_2 %>
        <%= f.telephone_field :phone_2, class: "form-control", pattern: "^0\[0-9]{2,3}\[0-9]{1,4}\[0-9]{4}$", maxlength: 11, placeholder: "半角数字(ハイフンなし)" %>

        <%= f.label :email %>
        <%= f.email_field :email, maxlength: 254, class: "form-control" %>

        <%= f.label :zip_code %>
        <%= f.text_field :zip_code, maxlength: 7, class: "form-control", placeholder: "半角数字(ハイフンなし)" %>

        <%= f.label :address %>
        <%= f.text_field :address, maxlength: 50, class: "form-control" %>

        <%= f.label :password %>
        <%= f.password_field :password, maxlength: 12, class: "form-control" %>

        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, maxlength: 12, class: "form-control" %>

        <div class="btn-area">
          <%= f.submit "更新", class: "btn btn-dark" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% if @client.errors.any? %>
  <script>
    $(document).ready(function() {
      history.pushState("", "", location.href + "/edit")
    });
  </script>
<% end %>
