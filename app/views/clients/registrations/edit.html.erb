<div class="col-md-6 offset-md-3 col-12">
  <h2>アカウント編集</h2>
  <div class = "show_avator_client mx-auto my-2">
    <%= avator(current_client) %>
  </div>

  <div class="card text-center tab-wrapper">
    <div class="card-body">
      <%= form_with(model: @client, url: client_registration_path, local: true) do |f| %>
        <%= render "shared/error_messages", resource: @client %>

        <%= f.label :name, class: "float-l" %>
        <%= f.text_field :name, maxlength: 30, required: true, class: "form-control" %>
        
        <%= f.label :phone_1, class: "float-l" %>
        <%= f.telephone_field :phone_1, class: "form-control", pattern: "^0\[0-9]{2,3}\[0-9]{1,4}\[0-9]{4}$", maxlength: 11, placeholder: "半角数字(ハイフンなし)" %>
        
        <%= f.label :phone_2, class: "float-l" %>
        <%= f.telephone_field :phone_2, class: "form-control", pattern: "^0\[0-9]{2,3}\[0-9]{1,4}\[0-9]{4}$", maxlength: 11, placeholder: "半角数字(ハイフンなし)" %>

        <%= f.label :email, class: "float-l" %>
        <%= f.email_field :email, maxlength: 254, class: "form-control" %>

        <%= f.label :postal_code, class: "float-l" %>
        <%= f.text_field :postal_code, maxlength: 7, pattern: "^[0-9]{7}$", autocomplete: "postal_code", id: "postcode", placeholder: "半角数字(ハイフンなし)", class: "form-control" %>
        
        <%= f.label :prefecture_code, class: "float-l" %>
        <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :name, :name, { prompt: '選択してください' }, id: "prefecture_code", class: "form-control" %>
        
        <%= f.label :address_city, class: "float-l" %>
        <%= f.text_field :address_city, autocomplete: "address_city", id: "address_city", class: "form-control" %>
         
        <%= f.label :address_street, class: "float-l" %>
        <%= f.text_field :address_street, autocomplete: "address_street", id: "address_street", class: "form-control" %>

        <%= f.label :password, class: "float-l" %>
        <%= f.password_field :password, maxlength: 12, class: "form-control" %>

        <%= f.label :password_confirmation, class: "float-l" %>
        <%= f.password_field :password_confirmation, maxlength: 12, class: "form-control" %>

        <div class="btn-area">
          <%= f.submit "更新", class: "btn btn-dark" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% if @client.errors.any? %>
  <script>
    $(document).ready(function() {
      history.pushState("", "", location.href + "/edit")
    });
  </script>
<% end %>
