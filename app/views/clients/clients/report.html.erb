<div id="client-page">
  
  <section class="ml-2e">
    <%= render partial: "layouts/page_title", locals: { title_1: "報告書", title_2: "#{ @matter.title }", icon: "fa-book-open"} %>
  </section>

  <div class="row justify-content-md-center">
    
    <section>
      <div class="slide-container">
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" data-interval="50000">
        <div class="carousel-inner">
          <% @report_cover_images.each.with_index(1) do |image_id, index| %>
          <div class="carousel-item" id="image-<%= index %>">
            <h4 class="mt-1e"><i class="fas fa-thumbtack"></i> 表紙</h4>
            <%= image_tag url_for(Image.find(image_id).image.variant(combine_options:{gravity: :center, resize:"1000x700^",crop:"1000x700+0+0"})) %>
          </div>
          <% end %>
          <% @reports.each do |report| %>
            <div class="carousel-item">
              <h4 class="mt-1e"><i class="fas fa-thumbtack"></i> <%= report.title %></h4>
              <%= image_tag url_for(report.image.image.variant(combine_options:{gravity: :center, resize:"1000x700^",crop:"1000x700+0+0"})) %>
            </div>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
      </div>
    </section>

  </div>
</div>

<script>
  $( function(){
    $('#image-1').addClass('active');
  });
</script>