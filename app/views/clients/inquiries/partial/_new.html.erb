<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header"><button type="button" class="close" data-dismiss="modal">&times;</button></div>
    <div class="modal-body pa-2e">
      <div class="card mb-3">
        <h5 class="card-header">ログインID・パスワード失効</h5>
        <div class="card-body">
        <%= form_with(model: @inquiry, url: clients_inquiries_path, local: true) do |f| %>
          <%= f.label :name, "氏名" %>
          <%= f.text_field :name, maxlength: 30, required: true, class: "form-control" %>
  
          <%= f.label :phone, "電話番号" %>
          <%= f.telephone_field :phone, class: "form-control", pattern: "^0\[0-9]{2,3}\[0-9]{1,4}\[0-9]{4}$", maxlength: 11 %>

          <%= f.label :registered_email, "登録済メールアドレス" %>
          <%= f.email_field :registered_email, maxlength: 254, class: "form-control" %>

          <%= f.label :reply_email, "返信用メールアドレス" %>
          <%= f.email_field :reply_email, maxlength: 254, class: "form-control" %>

          <div class="btn-area">
            <%= f.submit "送信", class: "btn btn-dark reset-errors" %>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
