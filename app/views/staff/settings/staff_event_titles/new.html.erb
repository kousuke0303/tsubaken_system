<div class="container">
  <h3><i class="fas fa-cog"></i> デフォルトイベント設定</h3>
  <div class="row">
    <div class="col-sm-12">
    </div>
    <div class="col-md-4 mt-1e">
      <div class="row">
        <div class="col-sm-8">
          <h5 class="pt-05e">イベントタイトル</h5>
        </div>
        <div class="col-sm-4 text-right">
          <botton class="btn btn-dark default_staff_event_title_new_btn mb-1e">追加</botton>
        </div>
      </div>
      <div class="ajax_title_area">
        <%= render partial: 'staff/settings/staff_event_titles/ajax_staff_event_title/title_index', locals: { default_staff_event_titles: @default_staff_event_titles } %>
      </div>
    </div>

    <div class="col-md-8">
      <h5>詳細</h5>
      <div class="default_staff_event_showarea">
        <div class="ajax_show_area">
          <%= render partial: 'staff/settings/staff_event_titles/ajax_staff_event_title/show', locals: { default_staff_event_titles: @default_staff_event_titles } %>
        </div>

        <table class="table default_staff_event_title_new_form" style="display: none;">
          <%= form_with(model: @event_titles, url: staff_settings_staff_event_titles_path(current_staff), method: :post, remote: true) do |f| %>
          <tr>
            <th>タイトル</th>
          </tr>
          <tr>
            <td><%= f.text_field :event_name, required: true, class: "form-control" %></td>
          </tr>
          <tr>
            <th>備考</th>
          </tr>
          <tr>
            <td><%= f.text_area :note, class: "form-control" %></td>
          </tr>
          <tr>
            <td>
              <%= f.submit "登録", class: "btn btn-dark" %>
              <button type="button" class="float-r return_btn">戻る</button>
            </td>
          </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>

<script>
<% @default_staff_event_titles.each do |staff_event_title| %>
  $('#default_staff_event_title_<%= staff_event_title.id %>_title').on('click', function(){
    $('#default_staff_event_title_<%= staff_event_title.id %>_show').show();
    $('.default_staff_event_title_show:not(#default_staff_event_title_<%= staff_event_title.id %>_show)').hide();
    $('#default_staff_event_title_<%= staff_event_title.id %>_title').addClass('active');
    $('.default_staff_event_title_title:not(#default_staff_event_title_<%= staff_event_title.id %>_title)').removeClass('active');
  });
<% end %>
</script>

<script>
  $('.default_staff_event_title_new_btn').on('click', function(){
    $('.default_staff_event_title_new_form').show();
    $('.default_staff_event_show').hide();
  });

  $('.return_btn').on('click', function(){
    $('.default_staff_event_title_new_form').hide();
  });
</script> 