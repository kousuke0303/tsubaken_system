<div class="modal-dialog no-padding_modal wide_modal">
  <div class="modal-content">
    <div class="modal-header">
      変更された担当タスク
      <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
      <div class="table-responsive">
        <table class="table table-bordered text-nowrap table-column-type">
          <tr>
            <th style="vertical-align: middle;">確認済</th>
            <th></th>
            <th style="vertical-align: middle;">タイトル</th>
            <th style="vertical-align: middle;">内容</th>
            <th style="vertical-align: middle;">通知人</th>
          </tr>
          <% @updation_tasks.each do |task| %>
            <tr>
              <td rowspan="2" style="vertical-align: middle; text-align: center;">
                <input type="checkbox" name="confirmation" value=<%= task.notification_id %> checked="checked">
              </td>
              <td>変更後</td>
              <td><%= task.title %></td>
              <td><%= task.content %></td>
              <td rowspan="2" style="vertical-align: middle;"><%= member_name_from_member_code_id(task.sender_id) %></td>
            </tr>
            <tr>
              <td>変更前</td>
              <td><%= task.before_value_1 %></td>
              <td><%= task.before_value_2 %></td>
              <td><%= task.before_value_3 %></td>
            </tr>
          <% end %>
        </table>
      </div>
      <div class="text-center">
        <button class="btn btn-dark" id="confirmation_btn">確認</button>  
      </div>
    </div>
  </div>
</div>

<script>
  $('#confirmation_btn').on('click', function(){
    var checked_notification_array = [];
    $('input').each( function(index, element){
      if($(element).prop('checked')){
        var val = $(this).val();
        checked_notification_array.push(val);
      }
    });
    $.ajax({
      type: "PATCH",
      url: "<%= updates_notifications_path %>",
      cache: false,
      data: { notification_ids: checked_notification_array },
    })
  });
</script>