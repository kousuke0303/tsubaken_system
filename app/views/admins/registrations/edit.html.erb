<div class="container">
  <h2>管理者編集</h2>
  
  <%= form_with(model:@admin, url: admin_registration_path(current_admin), local: true) do |f| %>
    <%= render "shared/error_messages", resource: resource %>
  
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", maxlength: 20, required: true, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <%= f.label :employee_id %>
      <%= f.text_field :employee_id, autofocus: true, autocomplete: "employee_id", maxlength: 10, required: true, class: "form-control" %>
    </div>
  
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "new-password", maxlength: 12, required: true, class: "form-control" %>
    </div>
  
    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", maxlength: 12, required: true, class: "form-control" %>
    </div>
  
    <div class="">
      <%= f.submit "編集", class: "btn btn-dark" %>
    </div>
  <% end %>
</div>