<div class=" col-lg-12 col-md-12">
  <h2>アカウント編集</h2>
  <div class = "show_avator_admin mx-auto">
    <%= avator(current_admin) %>
  </div>

  <div class="card text-center tab-wrapper">
    <div class="card-header bg-dark"></div>
    <div class="card-body">
      <%= form_with(model: @admin, url: admin_registration_path, local: true) do |f| %>
        <%= render "shared/error_messages", resource: resource %>

        <%= f.label :name %>
        <%= f.text_field :name, maxlength: 30, required: true, class: "form-control" %>

        <%= f.label :login_id %>
        <%= f.text_field :login_id, maxlength: 12, required: true, class: "form-control" %>

        <%= f.label :phone %>
        <%= f.telephone_field :phone, class: "form-control", pattern: "^0\[0-9]{2,3}\[0-9]{1,4}\[0-9]{4}$", maxlength: 11 %>

        <%= f.label :email %>
        <%= f.email_field :email, maxlength: 254, class: "form-control" %>

        <%= f.label :password %>
        <%= f.password_field :password, maxlength: 12, class: "form-control" %>

        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, maxlength: 12, class: "form-control" %>
        
        <div class="btn-area">
          <%= f.submit "更新", class: "btn btn-dark" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% if @admin.errors.any? %>
  <script>
    $(document).ready(function() {
      history.pushState("", "", location.href + "/edit")
    });
  </script>
<% end %>
