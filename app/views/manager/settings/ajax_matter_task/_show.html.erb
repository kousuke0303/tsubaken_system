<% default_matter_tasks.each do |task| %>
  <div>
    <table class="table table-bordered default_matter_task_show mt-1e" id="default_matter_task_<%= task.id %>_show" style="display: none;">
      <tr>
        <th>タイトル</th>
      </tr>
      <tr>
        <td><%= task.title %></td>
      </tr>
      <tr>
        <th>備考</th>
      </tr>
      <tr>
        <td><%= task.memo %></td>
      </tr>
      <tr>
        <td><button id="default_matter_task_<%= task.id %>_edit_btn">編集</button></td>
      </tr>
    </table>
  </div>
  
  <div id="default_matter_task_<%= task.id %>_edit_form">
    <%= form_with(model: task, url: manager_settings_default_matter_task_create_path(current_manager, task), remote: true, method: :patch) do |fi| %>
      <table class="table table-bordered mt-1e" id="default_matter_task_<%= task.id %>_edit" style="display: none;">     
        <tr>
          <th>タイトル</th>
        </tr>
        <tr>
          <td><%= fi.text_field :title, class: "form-control" %></td>
        </tr>
        <tr>
          <th>備考</th>
        </tr>
        <tr>
          <td><%= fi.text_area :memo, class: "form-control" %></td>
        </tr>
        <tr>
          <td>
            <%= fi.submit "登録", class: "btn btn-dark" %>
            <button type="button" class="float-r return_btn">戻る</button>
          </td>
        </tr>
      </table>
    <% end %>
  </div>
  
<% end %>