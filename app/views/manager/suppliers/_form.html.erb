<div class="supplier_error">
  <%= render partial: './layouts/error_messages', locals: { resource: @supplier } %>
</div>
  
<div class="form-group" style="display: flex">
  <div class="mr-1e">
    <%= f.label :company, "会社名", class: "form-control supplier_form" %>
  </div>
  <div>
    <%= f.text_field :company, required: true, class: "form-control" %>
  </div>
</div>
    
<div class="form-group" style="display: flex">
  <div class="mr-1e">
    <%= f.label :representative_name, "代表者", class: "form-control supplier_form" %>
  </div>
  <div>
    <%= f.text_field :representative_name, class: "form-control" %>
  </div>
</div>
                
<div class="form-group">
  <%= f.label :location, "所在地" %>
  <%= f.text_field :location, required: true, class: "form-control" %>
</div>
                
                
<div class="form-group">
  <%= f.label :mail, "Mail" %>
  <%= f.email_field :mail, required: true, class: "form-control", pattern: "/\A[\w+\-.]+@[a-z\d\-.]+\.[a-z]+\z/i"%>
</div>
    
<div class="row">
                
  <div class="form-group col-sm-6">
    <%= f.label :phone, "電話番号" %>
    <%= f.telephone_field :phone, class: "form-control", pattern: "[0-9]{11,}" %>
    <small class="form-text text-muted">半角数字のみ</small>
  </div>
              
  <div class="form-group col-sm-6">
    <%= f.label :fax, "FAX" %>
    <%= f.telephone_field :fax, class: "form-control", pattern: "[0-9]{11,}" %>
    <small class="form-text text-muted">半角数字のみ</small>
  </div>
    
</div>
    
<div class="text-right">
  <% if @btn_type == "update" %>
    <%= f.submit "更新", class: "btn btn-dark" %>
  <% else %>
    <%= f.submit "作成", class: "btn btn-dark" %>
  <% end %>
</div>