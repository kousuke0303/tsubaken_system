<div class="modal-dialog">
  <!-- モーダルコンテンツ:モーダルに表示させる内容-->
  <div class="modal-content modal-bg-color">
    <div class="modal-body pa-2e">
    <!-- &timesは「×ボタン」の表示-->
      <div class="col-sm-12">
        <div class="card mb-3">
          <h5 class="card-header user_form_color">
            User/新規作成
            <button type="button" class="close text-white" data-dismiss="modal">&times;</button>
          </h5>
          
          <div class="card-body">
            <%= form_with(model: [:current_manager, current_manager.manager_users.build ], url: manager_users_path(current_manager), method: :post, remote: true) do |f| %>
    
              <div class="user_create_error"></div>
            
              <div class="form-group">
                <%= f.label :name, "名前" %>
                <%= f.text_field :name, required: true, class: "form-control" %>
              </div>
                
              <div class="form-group">
                <%= f.label :email, "Mail" %>
                <%= f.email_field :email, required: true, class: "form-control" %>
              </div>
                
              <div class="form-group">
                <%= f.label :phone, "電話番号" %>
                <%= f.telephone_field :phone, class: "form-control", pattern: "^0\[0-9]{2,3}\[0-9]{1,4}\[0-9]{4}$" %>
                <small class="form-text text-muted">半角数字のみ（ハイフンなし）</small>
              </div>
            
              <div class="form-group">
                <%= f.label :fax, "FAX" %>
                <%= f.telephone_field :fax, class: "form-control", pattern: "^0\[0-9]{2,3}\[0-9]{1,4}\[0-9]{4}$"  %>
                <small class="form-text text-muted">半角数字のみ（ハイフンなし）</small>
              </div>
              
              <div class="text-right">
                <%= f.submit "作成", class: "btn btn-dark" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
