<div class="container">
  <h2>EMPLOYEE一覧</h2>
  
  <div class="row mt-1e employee_select">
    <div class="col-sm-8">
      <button class="btn employee_select_btn" id="select_submanager">Submanager</button>
      <button class="btn employee_select_btn" id="select_staff">Staff</button>
    </div>
    <div class="col-sm-4">
      <button class="employee_new_btn btn btn-purple mb-1e float-r" id="employee_new_btn"><i class="fas fa-user-plus"></i> 新規作成</button>
    </div>
  </div>
  
  <div class="table-responsive">
    <table class="table table-bordered employee_index text-nowrap">
      <thead>
        <tr>
          <th>type</th>
          <th>名前</th>
          <th>電話番号</th>
          <th>email</th>
          <th>基本情報</th>
        </tr>
      </thead>
      <tbody id="submanager_index" style="display: none;">
        <%= render 'manager/managers/employee_type/submanager_index' %>
      </tbody>
      <tbody id="staff_index" style="display: none;">
        <%= render 'manager/managers/employee_type/staff_index' %>
      </tbody>
    </table>
  </div>
</div>

<!--新規作成モーダル-->
<div class="modal" id="employee_new">
  <div class="modal__bg js-modal-close"></div>
  <div>
    <%= render partial: 'manager/managers/select_employee_type', locals: {staff: @staff} %>
  </div>
</div>

<script>
  $('#select_submanager').on('click', function(){
    $('#select_submanager').addClass('active');
    $('#select_staff').removeClass("active");
    $('#submanager_index').show();
    $('#staff_index').hide();
  });
  
  $('#select_staff').on('click', function(){
    $('#select_submanager').removeClass('active');
    $('#select_staff').addClass("active");
    $('#submanager_index').hide();
    $('#staff_index').show();
  });
</script>

<script>
  $(function(){
    $('#employee_new_btn').on('click',function(){
      $('#employee_new').fadeIn();
      return false;
    });
    
    $('.js-modal-close').on('click',function(){
      $('#employee_new').fadeOut();
      return false;
    });
    
    $('.close').on('click', function(){
      $('#employee_new').fadeOut();
    });
  });
</script>

