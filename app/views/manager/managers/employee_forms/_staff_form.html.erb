<div class="mt-1e">
  <div class="card mb-3">
    <h5 class="card-header staff_form_color">Staff/新規作成</h5>
    <div class="card-body">

      <%= form_with(model: [:manager, staff], url: manager_staffs_path(manager), method: :post, remote: true) do |f| %>
      
        <div class="staff_create_error"></div>
        
        <div class="form-group">
          <%= f.label :name, "名前" %>
          <%= f.text_field :name, required: true, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :email, "Mail" %>
          <%= f.email_field :email, required: true, class: "form-control" %>
        </div>
      
        <%= f.submit "作成", class: "btn btn-dark" %>
      <% end %>
   </div>   
  </div>
</div>
  