<div>
  <h2>マネージャー作成</h2>

  <%= form_with(model: @manager, url: employees_managers_path, method: :post, local: true) do |f| %>
    <%= render "layouts/error_messages", resource: @manager %>

    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", maxlength: 30, required: true, class: "form-control" %>

    <%= f.label :login_id %>
    <%= f.text_field :login_id, autofocus: true, autocomplete: "login_id", maxlength: 12, required: true, class: "form-control" %>
    
    <%= f.label :phone %>
    <%= f.telephone_field :phone, class: "form-control", pattern: "^0\[0-9]{2,3}\[0-9]{1,4}\[0-9]{4}$", maxlength: 11, placeholder: "半角数字(ハイフンなし)" %>

    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", maxlength: 254, class: "form-control" %>

    <%= f.label :birthed_on %>
    <%= f.date_field :birthed_on, autofocus: true, autocomplete: "birthed_on", class: "form-control" %>

    <%= f.label :zip_code %>
    <%= f.text_field :zip_code, autofocus: true, autocomplete: "zip_code", maxlength: 7, pattern: "^[0-9]{7}$", class: "form-control", placeholder: "半角数字(ハイフンなし)" %>

    <%= f.label :address %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address", maxlength: 50, class: "form-control" %>

    <%= f.label :joined_on %>
    <%= f.date_field :joined_on, autofocus: true, autocomplete: "joined_on", class: "form-control" %>

    <%= f.label :resigned_on %>
    <%= f.date_field :resigned_on, autofocus: true, autocomplete: "resigned_on", class: "form-control" %>

    <div class="btn-area">
      <%= f.submit "作成", class: "btn btn-dark" %>
    </div>
  <% end %>

  <% if @manager.errors.any? %>
    <script>
      $(document).ready(function() {
        history.pushState("", "", location.href + "/new")
      });
    </script>
  <% end %>
</div>