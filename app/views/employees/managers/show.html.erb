<div class="container">
  <h2>マネージャー詳細</h2>

  <div class="card text-center tab-wrapper">
    <div class="card-header bg-dark">
      <ul class="nav nav-tabs d-flex flex-column flex-md-row card-header-tabs" id="manager-show-tab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" href="#manager-detail" data-toggle="tab" role="tab" aria-controls="home" aria-selected="true">詳細情報</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#person_in_charge" data-toggle="tab" role="tab" aria-controls="home" aria-selected="false">案件一覧</a>
        </li>
      </ul>
    </div>

    <div class="card-body">
      <div class="tab-content" id="manager-show-tab">

        <div class="tab-pane fade show active bg-white" id="manager-detail" role="tabpanel" aria-labelledby="home-tab">
          <%= render "employees/managers/tab_pane/detail" %>
        </div>

      <div class="btn-area">
        <button class="btn btn-dark" data-toggle="modal" data-target="#manager-edit">編集</button>
        <%= link_to "削除", employees_manager_path(@manager), method: :delete, data: { confirm: "このマネージャーを削除してよろしいですか？" }, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
