<%= f.label :name %>
<%= f.text_field :name, maxlength: 30, required: true, class: "form-control" %>

<%= f.label :department_id %>
<%= f.collection_select :department_id, @departments, :id, :name, { required: true }, class: "form-control" %>

<%= f.label :login_id %>
<%= f.text_field :login_id, maxlength: 12, required: true, class: "form-control" %>

<%= f.label :phone %>
<%= f.telephone_field :phone, class: "form-control", pattern: "^0\[0-9]{2,3}\[0-9]{1,4}\[0-9]{4}$", maxlength: 11, placeholder: "半角数字(ハイフンなし)" %>

<%= f.label :email %>
<%= f.email_field :email, maxlength: 254, class: "form-control" %>

<%= f.label :birthed_on %>
<%= f.date_field :birthed_on, class: "form-control" %>

<%= f.label :郵便番号 %>
<%= f.text_field :postal_code, autocomplete: "postal_code", id: "manager_postcode", class: "form-control" %>

<%= f.label :都道府県 %>
<br>
<%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :name, :name, { prompt: '選択してください' },  id: "manager_prefecture_code", class: "form-control" %>

<%= f.label :市区町村 %>
<%= f.text_field :address_city, autocomplete: "address_city", id: "manager_address_city", class: "form-control" %>
 
<%= f.label :町名番地 %>
<%= f.text_field :address_street, autocomplete: "address_street", id: "manager_address_street", class: "form-control" %>

<%= f.label :joined_on %>
<%= f.date_field :joined_on, class: "form-control" %>

<%= f.label :resigned_on %>
<%= f.date_field :resigned_on, class: "form-control" %>

<script type="text/javascript" src="jquery.jpostal.js"></script>