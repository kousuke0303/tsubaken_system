<div class="col-lg-12 col-md-12">
  <h2>
    Manager一覧
    <%= link_to new_employees_manager_path, remote: true, class: "btn btn-dark float-r" do %>
      <i class="fas fa-plus"></i> 新規Manager
    <% end %>
  </h2>
  <div class="card text-center tab-wrapper">
    <div class="card-header bg-dark">
      <ul class="nav nav-tabs d-flex flex-column flex-md-row card-header-tabs" id="managers-index" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" href="#enrolled" data-toggle="tab" role="tab" aria-controls="home" aria-selected="true">在籍中</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#retired" data-toggle="tab" role="tab" aria-controls="home" aria-selected="false">退職済</a>
        </li>
      </ul>
    </div>
    <div class="card-body">
      <div class="tab-content" id="managers-index">

        <div class="tab-pane fade show active bg-white" id="enrolled" role="tabpanel">
          <table class="table table-sm common-table">
            <tr>
              <th>名前</th>
              <th>ログインID</th>
              <th>電話番号</th>
              <th>入社日</th>
            </tr>
            <% @enrolled_managers.each do |manager| %>
              <tr class="tr-link" data-link="<%= employees_manager_path(manager) %>">
                <td><%= manager.name %></td>
                <td><%= manager.login_id %></td>
                <td><%= manager.phone %></td>
                <td><%= manager.joined_on %></td>
              </tr>
            <% end %>
          </table>
        </div>

        <div class="tab-pane fade show bg-white" id="retired" role="tabpanel">
          <table class="table table-sm common-table">
              <tr>
                <th>名前</th>
                <th>ログインID</th>
                <th>電話番号</th>
                <th>入社日</th>
              </tr>
              <% @retired_managers.each do |manager| %>
                <tr class="tr-link" data-link="<%= employees_manager_path(manager) %>">
                  <td><%= manager.name %></td>
                  <td><%= manager.login_id %></td>
                  <td><%= manager.phone %></td>
                  <td><%= manager.joined_on %></td>
                </tr>
              <% end %>
            </table>
        </div>
      </div>
    </div>
  </div>
</div>

