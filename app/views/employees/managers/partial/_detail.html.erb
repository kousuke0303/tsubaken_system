<div class="card">
  <div class="card-body">
    <%= form_with(model: @manager, url: employees_manager_path(@manager), local: true) do |f| %>
      <%= render "shared/error_messages", resource: @manager %>
      <%= render 'managers/registrations/partial/form', f: f %>

      <% if current_admin || self_manager %>
        <div class="btn-area">
          <%= f.submit "情報更新", class: "btn btn-dark" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<% if current_admin || self_manager %>
  <div class="card mt-1e">
    <div class="card-body">
      <%= render partial: 'common_layouts/registrations/pass_form', 
                 locals: {target: @manager, path: :pass_update_employees_manager_path} %>
    </div>
  </div>
<% end %>