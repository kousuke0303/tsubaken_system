<%= f.label :title %>
<%= f.text_field :title, required: true, class: "form-control", maxlength: 30 %>

<%= f.label :status %>
<%= f.select :status, EstimateMatter.statuses.keys.map {|k| [I18n.t("enums.estimate_matter.status.#{k}"), k]}, {}, class: "form-control" %>

<%= f.label :client_id %>
<%= f.collection_select :client_id, @clients, :id, :name, {}, class: "form-control" %>
