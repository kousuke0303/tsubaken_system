<div class="modal-dialog wide-modal">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body pa-2e">
    
      <div class="certificate-update-errors"></div>
    
      <div class="card mb-3">
        <h5 class="card-header"><%= @certificate.title %>の編集</h5>
        <div class="card-body">
          <%= form_with(model: @certificate, url: employees_estimate_matter_certificate_path(@estimate_matter, @certificate), method: :patch, remote: true) do |f| %>
            <%= render "employees/estimate_matters/certificates/partial/form", f: f %>
             <div class="btn-area">
              <%= f.submit "更新", class: "btn btn-md btn-dark reset-errors" %>
              <%= link_to "削除", employees_estimate_matter_certificate_path(@estimate_matter, @certificate), method: :delete,
                                  remote: true, data: { confirm: "この診断書を削除してよろしいですか?" }, class: "btn btn-danger" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= javascript_include_tag "reset_errors.js" %>
