<div class="modal-dialog wide-modal">
  <div class="modal-content">
    <div class="modal-header"><button type="button" class="close" data-dismiss="modal">&times;</button></div>
    <div class="modal-body pa-2e">
      
      <div class="select-switch">
        <input type="radio" name="switch" id="radio1" checked>
        <label for="radio1" class="mt-0">診断書作成</label>
        <input type="radio" name="switch" id="radio2">
        <label for="radio2" class="mt-0">表紙作成</label>
      </div>
      
      <div id="cover" style="display: none">
        <div class="card mb-3">
          <h5 class="card-header">表紙作成</h5>
          <div class="card-body">
            <%= form_with(model: @cover, url: employees_estimate_matter_covers_path(current_estimate_matter), method: :post, remote: true) do |f| %>
              <div class="cover-create-errors"></div>
              <%= render "employees/estimate_matters/certificates/partial/cover_form", f: f %>
              <div class="btn-area">
                <%= f.submit "作成", class: "btn btn-dark reset-errors" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      
      <div id="certificate">
        <div class="card mb-3">
          <h5 class="card-header">診断書作成</h5>
          <div class="card-body">
            <%= form_with(model: @certificate, url: employees_estimate_matter_certificates_path(current_estimate_matter), method: :post, remote: true) do |f| %>
              <div class="certificate-create-errors"></div>
              <%= render "employees/estimate_matters/certificates/partial/form", f: f %>
              <div class="btn-area">
                <%= f.submit "作成", class: "btn btn-dark reset-errors" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= javascript_include_tag "reset_errors.js" %>

<script>
  $("#radio1").on("click", function(){
    $("#certificate").show();
    $("#cover").hide();
  });
  $("#radio2").on("click", function(){
    $("#certificate").hide();
    $("#cover").show();
  });
</script>