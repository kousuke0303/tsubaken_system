<div class="modal-dialog non-card-modal wide-modal">
  <div class="modal-content">
    <div class="modal-header">
      診断書作成
      <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    
    <div class="modal-body pa-2e">
      <%= form_with(model: @certificate, url: employees_estimate_matter_certificates_path(current_estimate_matter), method: :post, remote: true) do |f| %>
        <div class="certificate-create-errors"></div>
        <%= render "employees/estimate_matters/certificates/partial/form", f: f %>
        <div class="btn-area">
          <%= f.submit "作成", class: "btn btn-dark reset-errors" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= javascript_include_tag "reset_errors.js" %>