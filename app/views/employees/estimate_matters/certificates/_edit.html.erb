<div style="text-align: center;">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header"><button type="button" class="close" data-dismiss="modal">&times;</button></div>
      <div class="modal-body pa-2e">
      <div class="image-update-errors"></div>
        <%= form_with(model: @certificate, url: employees_estimate_matter_certificate_path(current_estimate_matter, @certificate.id), method: :patch, remote: true) do |f| %>
          <div class="edit-image-content-position">
            <%= f.label :title %>
            <select class="form-control" id="content_id" name="certificate[title]">
              <option>選択してください</option>
              <% @certificates.distinct.select(:title).each do |certificate| %>
                <option><%= certificate.title %></option>
              <% end %>
            </select>
          </div>

          <div class="edit-image-content-position">
            <%= f.label :content %>
            <%= f.text_area :content, maxlength: 1000, class: "form-control" %>
          </div>
          <div>
            <%= f.submit '編集する', class: "btn btn-md btn-dark" %>
          </div>
        <% end %> 
      </div>
    </div>
  </div>
</div>