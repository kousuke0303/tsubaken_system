<h4>タイトル選択</h4>
<%= f.label :title %>
<select class="form-control" id="content_id" name="certificate[title]">
  <% @certificates.distinct.select(:title).each do |certificate| %>
    <option><%= certificate.title %></option>
  <% end %>
</select>

<div style="margin-top: 15px;">
  <h4>タイトル編集</h4>
</div>
<%= f.label :title %>
<%= f.text_field :title, maxlength: 300, class: "form-control" %>

<%= f.label :content %>
<%= f.text_area :content, id: "content", value: "#{@certificates.first.content}", maxlength: 300, class: "form-control" %>

<%= f.hidden_field :image_id, value: params[:image_id] %>

<script>
 (function () {
    const auto_content = {
      'content': [
        <% @certificates.each do |certificate| %>
          "<%= certificate.content %>",
        <% end %>
      ]
    };
    document.getElementById('content_id').addEventListener('change', select_action, false);
    function select_action() {
      const selected_content = document.getElementById('content_id').selectedIndex;
      document.getElementById('content').value = auto_content['content'][selected_content];
    }
 }());
</script>