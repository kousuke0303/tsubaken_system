<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header"><button type="button" class="close" data-dismiss="modal">&times;</button></div>
    <div class="modal-body pa-2e">
      <div class="card mb-3">
        <h5 class="card-header">見積案件作成</h5>
        <div class="card-body">
          <%= form_with(model: @estimate_matter, url: employees_estimate_matters_path, method: :post, remote: true) do |f| %>
            <div class="estimate-matter-create-errors"></div>
            <%= render "form", f: f, clients: @clients, staffs: @staffs, external_staffs: @external_staffs %>
            <div class="btn-area">
              <%= f.submit "作成", class: "btn btn-dark" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render "shared/jq/reset_errors_jq" %>
