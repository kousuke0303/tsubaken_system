<div class="modal-dialog non-card-modal">
  <div class="modal-content">
    <div class="modal-header">
      営業ステータス作成
      <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    
    <div class="modal-body bg-white pa-2e">
      <%= form_with(model: @sales_status, url: employees_estimate_matter_sales_statuses_path(@estimate_matter), method: :post, remote: true) do |f| %>
        <div class="sales-status-create-errors"></div>
        <%= render "employees/estimate_matters/sales_statuses/partial/form", f: f %>
        <div class="btn-area">
          <%= f.submit "作成", class: "btn btn-dark reset-errors" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= javascript_include_tag "reset_errors.js" %>
