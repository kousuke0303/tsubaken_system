<script>
  $(".money-type").each(function(i, element) {
    var text = $(element).text();
    var moneyType = String(text).replace( /(\d)(?=(\d\d\d)+(?!\d))/g, "$1," );
    $(element).text(moneyType);
  });
</script>

<script>
  $(".estimates-print").click(function() {
    $("body > :not(#estimates-print-area)").hide();
    $("body").addClass("bg-white");
    $("#estimates-print-area").show();
    window.print();
    $('body > :not(#estimates-print-area)').show();
    $('#estimates-print-area').hide();
    $("body").removeClass("bg-white");
  });
</script>
