<div>
  <% if current_admin || current_manager %>
    <input type="hidden" name="estimate_matter_id" value="<%= @estimate_matter.id %>" id="estimate_matter_id">
    <input type="hidden" name="staff_id" value="<%= @estimate_matter.staffs.ids %>" id="staff_id">
    <input type="hidden" name="external_staff_id" value="<%= @estimate_matter.external_staffs.ids %>" id="external_staff_id">
  <% end %>

  <% if current_staff %>
    <% @staff_estimate_matters.each do |staff_estimate_matter| %>
      <input type="hidden" name="staff_id" value="<%= staff_estimate_matter.id %>" id="staff_id">
    <% end %>
  <% end %>

  <% if current_external_staff %>
    <% @external_staff_estimate_matters.each do |external_staff_estimate_matter| %>
      <input type="hidden" name="external_staff_id" value="<%= external_staff_estimate_matter.id %>" id="external_staff_id">
    <% end %>
  <% end %>
  
  <% if current_client %>
    <% @client_estimate_matters.each do |client_estimate_matter| %>
      <input type="hidden" name="external_staff_id" value="<%= client_estimate_matter.id %>" id="external_staff_id">
    <% end %>
  <% end %>
</div>

<div class="col-12">
  <div class="text-right mb-1e">
    <%= link_to "画像一覧", employees_estimate_matter_images_path(@estimate_matter), target: :_blank, rel: [:noopener, :noreferrer], class: "btn btn-dark" %>
    <%= link_to "チャットルーム", "#", target: :_blank, rel: [:noopener, :noreferrer], class: "btn btn-primary" %>
  </div>

  <h2><i class="fas fa-clipboard"></i> 見積案件詳細</h2>
  
  <table class="table table-bordered table-column-type">
    <tr>
      <th>状況</th>
      <td class="alert">テスト</td>
    </tr>
    <tr>
      <th>タイトル</th>
      <td><%= @estimate_matter.title %></td>
    </tr>
    <tr>
      <th>顧客</th>
      <td><%= @estimate_matter.client.name %></td>
    </tr>
    <tr>
      <th>集客方法</th>
      <td><%= @estimate_matter.attract_method.name if @estimate_matter.attract_method %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= @estimate_matter.postal_code %></td>
    </tr>
    <tr>
      <th>都道府県</th>
      <td><%= @estimate_matter.prefecture_code %></td>
    </tr>
    <tr>
      <th>市区町村</th>
      <td><%= @estimate_matter.address_city %></td>
    </tr>
    <tr>
      <th>町名番地</th>
      <td><%= @estimate_matter.address_street %></td>
    </tr>
    <tr>
      <th>内容</th>
      <td><%= @estimate_matter.content %></td>
    </tr>
  </table>
  <div class="btn-area mb-1e">
    <% if @estimate_matter.matter %>
      <%= link_to "案件詳細", employees_matter_path(@estimate_matter.matter), class: "btn btn-dark" %>
    <% else %>
      <%= link_to "案件作成", employees_estimate_matter_person_in_charge_path(@estimate_matter), remote: true, class: "btn btn-dark" %>
    <% end %>
    <%= link_to "編集", edit_employees_estimate_matter_path(@estimate_matter), remote: true, class: "btn btn-dark" %>
    <%= link_to "削除", employees_estimate_matter_path(@estimate_matter), method: :delete, data: { confirm: "この見積案件を削除してよろしいですか？" }, class: "btn btn-danger" %>
  </div>
  
  
  <div class="accordion" id="accordion-estimate-matter">
    <div class="card">
      <div class="card-header bg-dark" id="headingOne">
        <h5 class="text-light">
          営業履歴
          <button class="btn btn-link float-r text-light" type="button" data-toggle="collapse" data-target="#collapse-sales" aria-expanded="true" aria-controls="collapse-sales">
            詳細
          </button>
        </h5>
      </div>
  
      <div id="collapse-sales" class="collapse" aria-labelledby="headingOne" data-parent="#accordion-estimate-matter">
        <div class="card-body">
          <div class="text-right mb-05e">
            <%= link_to "営業記録作成", new_employees_estimate_matter_sales_status_path(@estimate_matter), remote: true, class: "btn btn-success" %>
          </div>
          <div class="sales-statuses-index">
            <%= render "employees/estimate_matters/tab_pane/sales_statuses" %>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="accordion mt-1e" id="accordion-estimate-matter">
    <div class="card">
      <div class="card-header bg-dark" id="headingOne">
        <h5 class="text-light">
          見積作成
          <button class="btn btn-link float-r text-light" type="button" data-toggle="collapse" data-target="#collapse-estimates" aria-expanded="true" aria-controls="collapse-sales">
            詳細
          </button>
        </h5>
      </div>
  
      <div id="collapse-estimates" class="collapse" aria-labelledby="headingOne" data-parent="#accordion-estimate-matter">
        <div class="card-body">
          <div class="text-right mb-05e">
            <%= link_to new_employees_estimate_matter_estimate_path(@estimate_matter), remote: true, class: "btn btn-success" do %>
              <i class="fas fa-plus"></i> 新規見積
            <% end %>
          </div>
          <div class="estimates-index">
            <%= render "employees/estimate_matters/tab_pane/estimates" %>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="accordion mt-1e" id="accordion-estimate-matter">
    <div class="card">
      <div class="card-header bg-dark" id="headingThree">
        <h5 class="text-light">
          診断書一覧
          <button class="btn btn-link float-r text-light" type="button" data-toggle="collapse" data-target="#collapse-certificates" aria-expanded="true" aria-controls="collapse-certificates">
            詳細
          </button>
        </h5>
      </div>
  
      <div id="collapse-certificates" class="collapse" aria-labelledby="headingThree" data-parent="#accordion-estimate-matter">
        <div class="card-body">
          <div class="estimates-index">
            <%= render "employees/estimate_matters/certificates/certificates" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
