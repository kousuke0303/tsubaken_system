<% if @response == "success" %>
  $("#estimate-material-edit").modal("hide");
  $(".flash-wrapper").html('<div class="flash flash-notice time-limit">素材を更新しました。</div>');
  $(".estimates-index").html('<%= escape_javascript(render "employees/estimate_matters/tab_pane/estimates", estimate_matter: @estimate_matter, estimates: @estimates) %>');
  $(function(){
    setTimeout("$('.time-limit').fadeOut('slow')", 3000) 
  })
<% else %>
  $(".estimate-material-update-errors").html('<%= escape_javascript(render "shared/error_messages", resource: @material) %>');
  <% @material.errors.messages.keys.each do |key_attribute| %>
    var addDiv = $('<div class="field-with-errors">');
    var addLabel = $('[name="material[<%= key_attribute.intern.to_s %>]"]').prev();
    $('[name="material[<%= key_attribute.intern.to_s %>]"]').wrap(addDiv);
    addLabel.wrap(addDiv);
  <% end %>
<% end %>