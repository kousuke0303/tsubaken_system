<table class="table table-sm common-table" id="sales_status_index">
  <tr>
    <th>ステータス</th>
    <th>予定日</th>
    <th>担当者</th>
    <th>更新者</th>
    <th>更新日</th>
    <th>備考</th>
    <th></th>
  </tr>
  <% @sales_statuses.each do |sales_status| %>
    <tr>
      <td><%= sales_status.status_i18n %></td>
      <td><%= l(sales_status.conducted_on, format: :short) %></td>
      <td><%= status_member_name(sales_status) if sales_status.sales_status_member.present? %></td>
      <td><%= editor_name(sales_status) if sales_status.sales_status_editor.present? %></td>
      <td><%= l(sales_status.updated_at, format: :day) %></td>
      <td><%= sales_status.note %></td>
      <td>
        <%= link_to "編集", edit_employees_estimate_matter_sales_status_path(@estimate_matter, sales_status), 
                            remote: true, class: "btn btn-sm btn-dark" %>
        <%= link_to "削除", employees_estimate_matter_sales_status_path(@estimate_matter, sales_status), method: :delete, remote: true,
                            data: { confirm: "この営業ステータスを削除してよろしいですか？" },class: "btn btn-sm btn-danger"  %>
      </td>
    </tr>
  <% end %>
</table>

<script>
  $(document).ready( function(){
    $('#sales_status_index td').slice(0, 7).addClass("now_status");
  });
</script>