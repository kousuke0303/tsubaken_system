<table class="table table-sm common-table">
  <tr>
    <th>見積名</th>
    <th></th>
    <th>工事カテゴリ名</th>
    <th></th>
  </tr>
  <% estimates.group_by{ |estimate| [estimate[:id]] }.each do |categories| %>
    <% categories = categories[1] %>
    <% categories.each_with_index do |category, index| %>
      <% if index == 0 %>
        <tr>
          <td><%= category.title %></td>
          <td>
            <%= link_to "見積削除", employees_estimate_matter_estimate_path(estimate_matter, category.id), method: :delete, remote: true,
                                   data: { confirm: "この見積を削除してよろしいですか？" }, class: "btn btn-sm btn-danger" %>
          </td>
          <td><%= category.name %></td>
          <td></td>
        </tr>
      <% else %>
        <tr>
          <td></td>
          <td></td>
          <td><%= category.name %></td>
          <td></td>
        </tr>
      <% end %>
    <% end %>
  <% end %>
</table>
