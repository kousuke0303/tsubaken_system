<% image.images.each do |images| %>
  <figure class="images-partial">
    <%= image_tag(images, width:400) %>
    <div class=img-display-area>
      <%= image.content %>
      <%= image.shooted_on %>
      <div class="margin-left-posision">
        <%= link_to icon('fas', 'edit'), edit_employees_estimate_matter_image_path(current_estimate_matter, image.id) %>
        <%= link_to icon('fas', 'trash-alt'), employees_estimate_matter_image_path(current_estimate_matter, image.id), method: :delete, data: { confirm: 'この写真を削除してよろしいですか?' } %>
      </div>
    </div>
  </figure>
<% end %>