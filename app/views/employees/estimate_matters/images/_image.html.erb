<table class="table table-bordered table_line_type">
  <div>
    <% if admin_signed_in? %>
      <input type="hidden" name="admin_id" value="<%= current_admin.id %>" id="admin_id">
    <% elsif manager_signed_in? %>
      <input type="hidden" name="manager_id" value="<%= current_manager.id %>" id="manager_id">
    <% elsif staff_signed_in? %>
      <input type="hidden" name="staff_id" value="<%= current_staff.id %>" id="staff_id">
    <% elsif external_staff_signed_in? %>
      <input type="hidden" name="external_staff_id" value="<%= current_external_staff.id %>" id="external_staff_id">   
    <% end %>
  </div>

  <thead>
    <tr>
      <th class="text-center">写真</th>
      <th class="text-center">投函者</th>
      <th class="text-center">画像内容</th>
      <th class="text-center">撮影日</th>
      <th class="text-center">画像編集・削除</th>
    </tr>
  </thead>
  <% image.images.each do |images| %>
    <tr>
      <td style="vertical-align: middle" class="text-center">
        <div class="text-center" style="margin-bottom: 10px;">
          <%= link_to "診断書作成", new_employees_estimate_matter_certificate_path(current_estimate_matter, image_id: image.id), remote: true, class: "btn btn-dark" %>
        </div>
        <%= image_tag url_for(images.variant(resize: "400x400")) %>
      </td>
      <td style="vertical-align: middle" class="text-center">
        <%= image.poster %>
      </td>
      <td style="vertical-align: middle" class="text-center">
        <%= image.content %>
      </td>
      <td style="vertical-align: middle" class="text-center">
        <%= image.shooted_on %>
      </td>
      <td style="vertical-align: middle" class="text-center">
        <%= link_to "編集", edit_employees_estimate_matter_image_path(current_estimate_matter, image.id), remote: true, class: "btn btn-dark" %>
        <%= link_to "削除", employees_estimate_matter_image_path(current_estimate_matter, image.id), method: :delete, data: { confirm: 'この写真を削除してよろしいですか?' }, class: "btn btn-danger" %>
      </td>
    </tr>
  <% end %>
</table>