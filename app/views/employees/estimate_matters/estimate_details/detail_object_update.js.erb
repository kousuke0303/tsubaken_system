<% if @response == "success" %>
  $("#modal-container").modal("hide");
  toastr.success('<%= @estimate_detail.object_name %>を更新しました');
  $(".estimates-index").html('<%= escape_javascript(render "employees/estimate_matters/partial/estimates_index") %>');
  $(function(){
    setTimeout("$('.time-limit').fadeOut('slow')", 3000) 
  });
  $("#modal-container").empty();
<% else %>
  <%= render "shared/javascript/modal_error", dom: ".estmate-object-update-errors", model: @estimate_detail, object: "estimate_detail" %>
<% end %>
