<% if @response == "success" %>
  $("#estimate-object-edit").modal("hide");
  $(".flash-wrapper").html('<div class="flash flash-notice time-limit">工事・素材を追加しました。</div>');
  $(".estimates-index").html('<%= escape_javascript(render partial: "employees/estimate_matters/partial/estimates_index", 
                                                          locals: {estimates: @estimates, 
                                                                    estimate_matter: @estimate_matter,
                                                                    estimate_details: @estimate_details}) %>');
  $(function(){
    setTimeout("$('.time-limit').fadeOut('slow')", 3000) 
  })
<% end %>
