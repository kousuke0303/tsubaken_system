<% if @estimate_matter.band_connection.nil? %>
  <% unless current_external_staff %>
    <%= link_to "BAND連結", employees_band_connections_path(estimate_matter_id: @estimate_matter.id, type: "new"), remote: true, class: "btn btn-primary" %>
  <% else %>
    未設定 
  <% end %>
<% else %>
  <div class="boxes">
    <div class="label-container ml-05e">
      <%=image_tag @estimate_matter.band_connection.band_icon, :size =>'50x50' %>
      <div class="band_name"><%= @estimate_matter.band_connection.band_name %></div>
      
      <% unless current_external_staff %>
        <%= link_to "選択解除", employees_band_connection_path(@estimate_matter.band_connection, estimate_matter_id: @estimate_matter.id), remote: true, method: :delete, class: "btn btn-dark band_delete_btn" %>
        <%= link_to "変更", employees_band_connections_path(estimate_matter_id: @estimate_matter.id, type: "edit"), remote: true, class: "btn btn-primary band_edit_btn" %>
      <% end %>
    </div>
  </div>
<% end %> 
