<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header"><button type="button" class="close" data-dismiss="modal">&times;</button></div>
    <div class="modal-body pa-2e">
      <div class="card mb-3">
        <h5 class="card-header">工事・素材選択</h5>
        <div class="card-body">
          <%= form_with(model: category, url: employees_estimate_matter_category_path(estimate_matter, category), method: :patch, remote: true) do |f| %>
            <div class="estimate-category-update-errors"></div>

            <%= f.label :category_ids, "素材" %>
            <div>
              <%= f.collection_check_boxes(:material_ids, materials, :id, :name, include_hidden: false) do |m| %>
                <%= m.check_box %><%= m.text %>
              <% end %> 
            </div>

            <%= f.label :category_ids, "工事" %>
            <div>
              <%= f.collection_check_boxes(:construction_ids, constructions, :id, :name, include_hidden: false) do |c| %>
                <%= c.check_box %><%= c.text %>
              <% end %> 
            </div>
            <div class="btn-area">
              <%= f.submit "更新", class: "btn btn-dark" %>
              <%= link_to "削除", employees_estimate_matter_category_path(estimate_matter, category), method: :delete, remote: true,
                                  data: { confirm: "この工事カテゴリを削除してよろしいですか？" }, class: "btn btn-danger" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render "shared/reset_errors_jq" %>
