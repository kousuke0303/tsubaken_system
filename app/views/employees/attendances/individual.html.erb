<div class="container">
  <h2>個別勤怠</h2>
      
  <div class="card text-center tab-wrapper">
    <div class="card-header bg-dark">
      <%= form_with(url: individual_employees_attendances_path, method: :get, local: true) do |f| %>
        <div class="row">

          <div class="col-lg-3 col-md-3" style="display: flex;">
            <div style="width: 60%;">
              <%= f.select :year, @years_hash, { selected: @first_day.year }, { class: "form-control", required: true } %>
            </div>
              
            <div style="width: 40%;">
              <%= f.select :month, Constants::MONTH_HASH, { selected: @first_day.month }, { class: "form-control", required: true } %>
            </div>
          </div>

          <div class="col-lg-3 col-md-3">
            <%= f.select :type, { "Manager": 1, "Staff": 2, "外部Staff": 3 }, { selected: params[:type], include_blank: "従業員タイプを選択" }, { class: "form-control", id: "type", required: true } %>
          </div>

          <div class="col-lg-3 col-md-3" id="initial">
            <%= f.select :initial, {}, { include_blank: "従業員を選択" }, class: "form-control", disabled: true %>
          </div>

          <div class="col-lg-3 col-md-3" id="manager">
            <%= f.collection_select :manager_id, @managers, :id, :name, { selected: params[:manager_id], include_blank: "Managerを選択" }, class: "form-control" %>
          </div>

          <div class="col-lg-3 col-md-3" id="staff">
            <%= f.collection_select :staff_id, @staffs, :id, :name, { selected: params[:staff_id], include_blank: "Staffを選択" }, class: "form-control" %>
          </div>

          <div class="col-lg-3 col-md-3" id="external_staff">
            <%= f.collection_select :external_staff_id, @external_staffs, :id, :name, { selected: params[:external_staff_id], include_blank: "外部Staffを選択" }, class: "form-control" %>
          </div>

          <div class="col-lg-3 col-md-3 text-left">
            <%= f.submit "検索", class: "btn btn-gray" %>
          </div>
        </div>
      <% end %>
    </div>
        
    <div class="card-body">
      <% if @resource %>
        <h5><%= @resource.name %></h5>
      <% end %>
      <table class="table table-sm common-table">
        <tr>
          <th>日付</th>
          <th>出勤時間</th>
          <th>退勤時間</th>
          <th>勤務時間</th>
        </tr>
        <% if @attendances %>
          <% @attendances.each do |attendance| %>
            <tr>
              <td><%= attendance.worked_on %></td>
              <td><%= attendance.started_at %></td>
              <td><%= attendance.finished_at %></td>
              <td><%= daily_working_time(attendance.working_minutes) if attendance.working_minutes.present? %></td>
            </tr>
          <% end %>
        <% end %>
      </table>
    </div>
  </div>
</div>

<script>
  const manager = $("#manager");
  const staff = $("#staff");
  const externalStaff = $("#external_staff");
  const initial = $("#initial");
  const inputDisabled = $("#input-disabled");

  function showManagerSelect() {
    manager.show();
    staff.hide();
    externalStaff.hide();
    initial.hide();
  };

  function showStaffSelect() {
    manager.hide();
    staff.show();
    externalStaff.hide();
    initial.hide();
  };

  function showExternalStaffSelect() {
    manager.hide();
    staff.hide();
    externalStaff.show();
    initial.hide();
  };

  function showInitialSelect() {
    manager.hide();
    staff.hide();
    externalStaff.hide();
  };

  <% if params[:type] && params[:type] == "1" %>
    showManagerSelect();
  <% elsif params[:type] && params[:type] == "2" %>
    showStaffSelect();
  <% elsif params[:type] && params[:type] == "3" %>
    showExternalStaffSelect();
  <% else %>
    showInitialSelect();
  <% end %>

  // 従業員タイプ選択が変わる度に、該当のセレクトフォームを表示
  $("#type").change(function() {
    if($(this).val() == "1"){
      showManagerSelect();
    } else if ($(this).val() == "2") {
      showStaffSelect();
    } else if ($(this).val() == "3") {
      showExternalStaffSelect();
    } else {
      showInitialSelect();
    };
  });
</script>
