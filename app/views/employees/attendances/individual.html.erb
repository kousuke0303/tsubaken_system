<div class="container">
  <h2>個別勤怠</h2>
      
  <div class="card text-center tab-wrapper">
    <div class="card-header bg-dark">
      <%= form_with(url: individual_employees_attendances_path, method: :get, local: true) do |f| %>
        <div class="row">

          <div class="col-lg-3 col-md-3" style="display: flex;">
            <div style="width: 60%;">
              <%= f.select :year, @years_hash, { selected: @first_day.year }, { class: "form-control" , required: true } %>
            </div>
              
            <div style="width: 40%;">
              <%= f.select :month, Constants::MONTH_HASH, { selected: @first_day.month }, { class: "form-control" , required: true } %>
            </div>
          </div>

          <div class="col-lg-3 col-md-3">
            <%= f.select :type, { "Manager": 1, "Staff": 2, "外部Staff": 3 }, { include_blank: "従業員タイプを選択" }, { class: "form-control" , required: true } %>
          </div>

          <div class="col-lg-3 col-md-3">
            <%= f.select :disabled, {}, { include_blank: "従業員を選択" }, class: "form-control", disabled: true %>
          </div>

          <div class="col-lg-3 col-md-3" hidden>
            <%= f.collection_select :client_id, @managers, :id, :name, {}, class: "form-control" %>
          </div>

          <div class="col-lg-3 col-md-3" hidden>
            <%= f.collection_select :client_id, @staffs, :id, :name, {}, class: "form-control" %>
          </div>

          <div class="col-lg-3 col-md-3" hidden>
            <%= f.collection_select :client_id, @external_staffs, :id, :name, {}, class: "form-control" %>
          </div>

          <div class="col-lg-3 col-md-3 text-left">
            <%= f.submit "検索", class: "btn btn-gray" %>
          </div>
        </div>
      <% end %>
    </div>
        
    <div class="card-body">
      <table class="table table-sm">
        <tr>
          <th>日付</th>
          <th>出勤時間</th>
          <th>退勤時間</th>
          <th>勤務時間</th>
        </tr>
        <% @attendances.each do |attendance| %>
          <tr>
            <td><%= attendance.worked_on %></td>
            <td><%= attendance.started_at %></td>
            <td><%= attendance.finished_at %></td>
            <td><%= daily_working_time(attendance.working_minutes) if attendance.working_minutes.present? %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
