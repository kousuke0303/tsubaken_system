<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header"><button type="button" class="close" data-dismiss="modal">&times;</button></div>
    <div class="modal-body pa-2e">
      <div class="card mb-3">
        <h5 class="card-header">勤怠編集</h5>
        <div class="card-body">
          <h5 class="text-center" id="edit-attendance-name"></h5>
          <h5 class="text-center" id="edit-attendance-worked-on"></h5>
          <%= form_with(model: @attendance, url: "#", method: :patch, remote: true, id: "edit-attendance-form") do |f| %>
            <div class="attendance-update-errors"></div>

            <%= f.label :started_at %>
            <%= f.time_field :started_at, class: "form-control", required: true, id: "edit-attendance-started-at" %>

            <%= f.label :finished_at %>
            <%= f.time_field :finished_at, class: "form-control", required: true, id: "edit-attendance-finished-at" %>

            <input name="prev_url" hidden>

            <div class="btn-area">
              <%= f.submit "更新", class: "btn btn-dark" %>
              <%= link_to "削除", "#", method: :delete, data: { confirm: "この勤怠を削除してよろしいですか？" }, class: "btn btn-danger", id: "to-destroy-attendance" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).on("turbolinks:load", function() {
    $('input[name="prev_url"]').val("<%= controller.action_name %>");
  });
</script>
