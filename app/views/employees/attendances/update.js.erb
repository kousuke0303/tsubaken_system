$(".attendance-update-errors").html('<%= escape_javascript(render "shared/error_messages", resource: @attendance) %>');
<% @attendance.errors.messages.keys.each do |key_attribute| %>
  var addDiv = $('<div class="field-with-errors">');
  var addLabel = $('[name="attendance[<%= key_attribute.intern.to_s %>]"]').prev();
  $('[name="attendance[<%= key_attribute.intern.to_s %>]"]').wrap(addDiv);
  addLabel.wrap(addDiv);
<% end %>
