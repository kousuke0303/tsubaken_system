      <div class="card mb-3">
        <h5 class="card-header">外部Staff編集</h5>
        <div class="card-body">
        <%= form_with(model: @external_staff, url: employees_external_staff_path(@external_staff), method: :patch, remote: true) do |f| %>
          <div class="external-staff-update-errors"></div>
          <%= render "form", f: f %>
          <div class="btn-area">
            <%= f.submit "更新", class: "btn btn-dark" %>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

