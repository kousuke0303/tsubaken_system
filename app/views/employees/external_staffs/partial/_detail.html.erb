<div class="card">
  <div class="card-body">
    <%= form_with(model: @external_staff, url: employees_external_staff_path(@external_staff), local: true) do |f| %>
      <%= render "shared/error_messages", resource: @external_staff %>
      <%= render 'external_staffs/registrations/partial/form', f: f %>

      <% if current_admin || current_manager || self_external_staff %>
        <div class="btn-area">
          <%= f.submit "更新", class: "btn btn-dark" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<% if current_admin || current_manager || self_external_staff %>
  <div class="card mt-1e">
    <div class="card-body">
      <%= render partial: 'common_layouts/registrations/pass_form', 
                 locals: {target: @external_staff, path: :pass_update_employees_external_staff_path} %>
    </div>
  </div>
<% end %>