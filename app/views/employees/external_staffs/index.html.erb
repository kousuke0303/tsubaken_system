<div class="col-12">
  <div class="row">
    <div class="col-md-6 col-12">
      <h2>外部Staff一覧</h2>
    </div>
    <div class="col-md-6 col-12">
      <%= link_to new_employees_external_staff_path, remote: true, class: "btn btn-dark float-r" do %>
        <i class="fas fa-plus"></i> 新規外部Staff
      <% end %>
    </div>
  </div>
  <div class="card mt-1e">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered text-nowrap common-table">
          <tr>
            <th>名前</th>
            <th>ログインID</th>
            <th>電話番号</th>
          </tr>
          <% @external_staffs.each do |external_staff| %>
            <tr class="tr-link" data-link="<%= employees_external_staff_path(external_staff) %>">
              <td><%= external_staff.name %></td>
              <td><%= external_staff.login_id %></td>
              <td><%= external_staff.phone %></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
