<div>
  <h2>外部スタッフ一覧</h2>
  <%= link_to "作成", new_employees_external_staff_path, class: "btn btn-dark" %>

  <table class="table table-sm" id="employees-external-staffs-table">
    <tr>
      <th>名前</th>
      <th>ログインID</th>
      <th>電話番号</th>
    </tr>
    <% @external_staffs.each do |external_staff| %>
      <tr class="tr-link" data-link="<%= employees_external_staff_path(external_staff) %>">
        <td><%= external_staff.name %></td>
        <td><%= external_staff.login_id %></td>
        <td><%= external_staff.phone %></td>
      </tr>
    <% end %>
  </table>
</div>

<script>
  $("tr[data-link]").click(function() {
    window.location = $(this).data("link")
  })
</script>