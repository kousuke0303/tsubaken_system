$(".external-staff-create-errors").html('<%= escape_javascript(render partial: "layouts/error_messages", locals: { resource: @external_staff }) %>');
<% @external_staff.errors.messages.keys.each do |key_attribute| %>
  var addDiv = $('<div class="field-with-errors">');
  var addLabel = $('input[name="external_staff[<%= key_attribute.intern.to_s %>]"]').prev();
  $('input[name="external_staff[<%= key_attribute.intern.to_s %>]"]').wrap(addDiv);
  addLabel.wrap(addDiv);
<% end %>
  