<div class="modal-dialog">
  <div class="modal-content">
  <div class="modal-header"><button type="button" class="close" data-dismiss="modal">&times;</button></div>
  <div class="modal-body pa-2e">
    <div class="card mb-3">
      <h5 class="card-header">外部スタッフ作成</h5>
      <div class="card-body">
      <%= form_with(model: @external_staff, url: employees_external_staffs_path, method: :post, remote: true) do |f| %>
        <div class="external-staff-create-errors"></div>

        <%= f.label :supplier %>
        <%= f.collection_select :supplier_id, Supplier.all, :id, :name, {}, class: "form-control", id: "new-external-staff-supplier-id" %>

        <%= f.label :login_id %>
        <div class="flex">
          <div class="login-id-lead" id="new-external-staff-lagin-id-lead"></div>
          <div class="login-id-body"><%= f.text_field :login_id_body, required: true, class: "form-control", maxlength: 8 %></div>
        </div>
        <%= f.hidden_field :login_id %>

        <%= f.label :name %>
        <%= f.text_field :name, required: true, class: "form-control", maxlength: 30 %>

        <%= f.label :kana %>
        <%= f.text_field :kana, required: true, class: "form-control", maxlength: 30 %>

        <%= f.label :phone %>
        <%= f.telephone_field :phone, class: "form-control", pattern: "^0\[0-9]{2,3}\[0-9]{1,4}\[0-9]{4}$", maxlength: 11, placeholder: "半角数字(ハイフンなし)" %>

        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", maxlength: 254, class: "form-control" %>

        <div class="btn-area">
          <%= f.submit "作成", class: "btn btn-dark", id: "create-external-staff" %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
  </div>
</div>

<script>
$(document).on("turbolinks:load", function() {
  const supplierForm = $("#new-external-staff-supplier-id");
  const loginIdLeadArea = $("#new-external-staff-lagin-id-lead");
  // 初期状態でのlogin_idの先頭文字をセット
  setLeadId();

  // 外注先の選択が変わる度、login_idの先頭文字を変更
  supplierForm.change(function() {
    setLeadId();
  });

  // login_idの先頭文字を自動生成するメソッド
  function setLeadId() {
    let supplierId = supplierForm.val();
    loginIdLeadArea.html("SP" + supplierId + "-");
  };

  $("#create-external-staff").click(function() {
    let loginIdLead = loginIdLeadArea.html();
    let loginIdBody = $('input[name="external_staff[login_id_body]"]').val();
    $('input[name="external_staff[login_id]"]').val(loginIdLead + loginIdBody);
  });
});
</script>
