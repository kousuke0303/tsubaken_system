<div class="modal-dialog">
  <div class="modal-content">
  <div class="modal-header"><button type="button" class="close" data-dismiss="modal">&times;</button></div>
  <div class="modal-body pa-2e">
    <div class="card mb-3">
      <h5 class="card-header">業種作成</h5>
      <div class="card-body">
      <%= form_with(model: @external_staff, url: employees_external_staffs_path, method: :post, remote: true) do |f| %>
        <div class="external_staff-create-errors"></div>

        <%= f.label :supplier %>
        <%= f.collection_select :supplier_id, Supplier.all, :id, :name, {}, class: "form-control" %>

        <%= f.label :login_id %>
        <div class="flex">
          <div class="login-id-lead" id="external-staff-lagin-id-lead"></div>
          <div class="login-id-form"><%= f.text_field :login_id, required: true, class: "form-control", maxlength: 12 %></div>
        </div>

        <%= f.label :name %>
        <%= f.text_field :name, required: true, class: "form-control", maxlength: 30 %>

        <%= f.label :kana %>
        <%= f.text_field :kana, required: true, class: "form-control", maxlength: 30 %>

        <%= f.label :phone %>
        <%= f.telephone_field :phone, class: "form-control", pattern: "^0\[0-9]{2,3}\[0-9]{1,4}\[0-9]{4}$", maxlength: 11, placeholder: "半角数字(ハイフンなし)" %>

        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", maxlength: 254, class: "form-control" %>

        <div class="btn-area">
          <%= f.submit "作成", class: "btn btn-dark" %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
  </div>
</div>

<script>
  $('select[name="external_staff[supplier_id]"]').change(function() {
    let supplierId = $(this).val();
    $("#external-staff-lagin-id-lead").html("SP" + supplierId + "-");
  });
</script>
