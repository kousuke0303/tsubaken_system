<div>
  <h2>外注先編集</h2>

  <%= form_with(model: @supplier, url: employees_supplier_path(@supplier), method: :patch, local: true) do |f| %>
    <%= render "layouts/error_messages", resource: @supplier %>

    <div>
      <%= f.label :industries %><br>
      <%= f.collection_check_boxes(:industry_ids, Industry.all, :id, :name) do |c| %>
        <%= c.check_box %><%= c.text %>
      <% end %> 
    </div>

    <%= f.label :name %>
    <%= f.text_field :name, maxlength: 30, required: true, class: "form-control" %>

    <%= f.label :kana %>
    <%= f.text_field :kana, maxlength: 30, required: true, class: "form-control" %>

    <%= f.label :representative %>
    <%= f.text_field :representative, maxlength: 30, required: true, class: "form-control" %>
    
    <%= f.label :phone_1 %>
    <%= f.telephone_field :phone_1, class: "form-control", pattern: "^0\[0-9]{2,3}\[0-9]{1,4}\[0-9]{4}$", maxlength: 11, placeholder: "半角数字(ハイフンなし)" %>

    <%= f.label :phone_2 %>
    <%= f.telephone_field :phone_2, class: "form-control", pattern: "^0\[0-9]{2,3}\[0-9]{1,4}\[0-9]{4}$", maxlength: 11, placeholder: "半角数字(ハイフンなし)" %>

    <%= f.label :fax %>
    <%= f.telephone_field :fax, class: "form-control", pattern: "^0\[0-9]{2,3}\[0-9]{1,4}\[0-9]{4}$", maxlength: 10, placeholder: "半角数字(ハイフンなし)" %>

    <%= f.label :email %>
    <%= f.email_field :email, maxlength: 254, class: "form-control" %>

    <%= f.label :zip_code %>
    <%= f.text_field :zip_code, maxlength: 7, pattern: "^[0-9]{7}$", class: "form-control", placeholder: "半角数字(ハイフンなし)" %>

    <%= f.label :address %>
    <%= f.text_field :address, maxlength: 50, class: "form-control" %>

    <div class="btn-area">
      <%= f.submit "更新", class: "btn btn-dark" %>
    </div>
  <% end %>

  <% if @supplier.errors.any? %>
    <script>
      $(document).ready(function() {
        history.pushState("", "", location.href + "/edit")
      });
    </script>
  <% end %>
</div>
