<div class="col-lg-12 col-md-12">
  <h2>
    外注先一覧
    <%= link_to new_employees_supplier_path, remote: true, class: "btn btn-dark float-r" do %>
      <i class="fas fa-plus"></i> 新規外注先
    <% end %>
  </h2>
  <div class="card text-center tab-wrapper">
    <div class="card-header bg-dark"></div>

    <div class="card-body">
      <table class="table table-sm common-table">
        <tr>
          <th>名前</th>
          <th>電話番号①</th>
          <th>住所</th>
        </tr>
        <% @suppliers.each do |supplier| %>
          <tr class="tr-link" data-link="<%= employees_supplier_path(supplier) %>" >
            <td><%= supplier.name %></td>
            <td><%= supplier.phone_1 %></td>
            <td><%= supplier.address %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
