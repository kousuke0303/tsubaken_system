<div class="col-12">
  <div class="row">
    <div class="col-md-6 col-12">
      <h2><i class="fas fa-building"></i> 外注先企業一覧</h2>
    </div>
    <div class="col-md-6 col-12">
      <%= link_to new_employees_supplier_path, remote: true, class: "btn btn-dark float-r" do %>
        <i class="fas fa-plus"></i> 新規外注先
      <% end %>
    </div>
  </div>

  <div class="table-responsive">
    <table class="table table-bordered text-nowrap common-table">
      <tr>
        <th>名前</th>
        <th>電話番号①</th>
        <th>都道府県</th>
        <th>市町村区</th>
        <th>町名番地</th>
      </tr>
      <% @suppliers.each do |supplier| %>
        <tr class="tr-link" data-link="<%= employees_supplier_path(supplier) %>" >
          <td><%= supplier.name %></td>
          <td><%= supplier.phone_1 %></td>
          <td><%= supplier.prefecture_code %></td>
          <td><%= supplier.address_city %></td>
          <td><%= supplier.address_street %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
