<table class="table table-sm common-table">
  <tr>
    <th>名前</th>
    <td><%= @supplier.name %></td>
  </tr>
  <tr>
    <th>フリガナ</th>
    <td><%= @supplier.kana %></td>
  </tr>
  <tr>
    <th>代表者名</th>
    <td><%= @supplier.representative %></td>
  </tr>
  <tr>
    <th>電話番号①</th>
    <td><%= @supplier.phone_1 %></td>
  </tr>
  <tr>
    <th>電話番号②</th>
    <td><%= @supplier.phone_2 %></td>
  </tr>
  <tr>
    <th>FAX</th>
    <td><%= @supplier.fax %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @supplier.email %></td>
  </tr>
  <tr>
    <th>郵便番号</th>
    <td><%= @supplier.postal_code %></td>
  </tr>
  <tr>
    <th>都道府県</th>
    <td><%= @supplier.prefecture_code %></td>
  </tr>
  <tr>
    <th>市区町村</th>
    <td><%= @supplier.address_city %></td>
  </tr>
  <tr>
    <th>町名番地</th>
    <td><%= @supplier.address_street %></td>
  </tr>
</table>

<div class="btn-area">
  <%= link_to "編集", edit_employees_supplier_path(@supplier), remote: true, class: "btn btn-dark" %>
  <%= link_to "削除", employees_supplier_path(@supplier), method: :delete, data: { confirm: "この外注先を削除してよろしいですか？" }, class: "btn btn-destroy" %>
</div>