<div>
  <h2>スタッフ詳細</h2>

  <table class="table table-sm" id="admins-manager-table">
    <tr>
      <th>名前</th>
      <td><%= @staff.name %></td>
    </tr>
    <tr>
      <th>ログインID</th>
      <td><%= @staff.login_id %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= @staff.phone %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @staff.email %></td>
    </tr>
    <tr>
      <th>生年月日</th>
      <td><%= @staff.birthed_on %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= @staff.zip_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= @staff.address %></td>
    </tr>
    <tr>
      <th>部署</th>
      <td><%= @department_name %></td>
    </tr>
    <tr>
      <th>入社日</th>
      <td><%= @staff.joined_on %></td>
    </tr>
    <tr>
      <th>退社日</th>
      <td><%= @staff.resigned_on %></td>
    </tr>
  </table>

  <div class="btn-area">
    <%= link_to "編集", edit_employees_staff_path(@staff), class: "btn btn-dark" %>
    <%= link_to "削除", employees_staff_path(@staff), method: :delete, data: { confirm: "このスタッフを削除してよろしいですか？" }, class: "btn btn-destroy" %>
  </div>
</div>
