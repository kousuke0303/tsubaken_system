$(".staff-create-errors").html('<%= escape_javascript(render "shared/error_messages", resource: @staff) %>');
<% @staff.errors.messages.keys.each do |key_attribute| %>
  var addDiv = $('<div class="field-with-errors">');
  var addLabel = $('[name="staff[<%= key_attribute.intern.to_s %>]"]').prev();
  $('[name="staff[<%= key_attribute.intern.to_s %>]"]').wrap(addDiv);
  addLabel.wrap(addDiv);
<% end %>
  