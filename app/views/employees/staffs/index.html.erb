<div>
  <h2>スタッフ一覧</h2>
  <button class="btn btn-dark" data-toggle="modal" data-target="#staff-new">作成</button>
  <table class="table table-sm" id="staffs-table">
    <tr>
      <th>名前</th>
      <th>ログインID</th>
      <th>電話番号</th>
      <th>入社日</th>
    </tr>
    <% @staffs.each do |staff| %>
      <tr class="tr-link" data-link="<%= employees_staff_path(staff) %>">
        <td><%= staff.name %></td>
        <td><%= staff.login_id %></td>
        <td><%= staff.phone %></td>
        <td><%= staff.joined_on %></td>
      </tr>
    <% end %>
  </table>
</div>
