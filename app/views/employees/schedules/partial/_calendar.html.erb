<%= month_calendar(attribute: :scheduled_date, events: @schedules) do |date, schedules| %>
  <%= date %>
  <div>
    <% unless schedules.count == 0 %>
      <%= link_to employees_schedule_path(schedules.first.id), remote: true do %>
        <%= schedules.count %>ä»¶
      <% end %>
    <% end %>
  </div>
<% end %>

<script>
$(document).ready( function(){
  $("#schedule_calender a").on('click', function(){
    $('#schedule_calender td').removeClass('schedule_target');
    $(this).parent().parent().addClass('schedule_target');
  });
});
</script>