$(".matter-update-errors").html('<%= escape_javascript(render "shared/error_messages", resource: @matter) %>');
<% @matter.errors.messages.keys.each do |key_attribute| %>
  var addDiv = $('<div class="field-with-errors">');
  var addLabel = $('[name="matter[<%= key_attribute.intern.to_s %>]"]').prev();
  $('[name="matter[<%= key_attribute.intern.to_s %>]"]').wrap(addDiv);
  addLabel.wrap(addDiv);
<% end %>
