<div class="col-sm-12 estimate_matter_images_page">
  
  <!--タイトル-->
  <div class="pc_type">
    <h2 class="title_layout"><i class="fas fa-camera"></i> 画像一覧／ <%= current_matter.title %></h2>
  </div>
  
  <div class="mobile_type">
    <h4 class="title_layout"><i class="fas fa-camera"></i> <%= current_matter.title %> 画像一覧</h4>
  </div>
  
  <div class="text-center">
    <div class="text-right mb-10">
      <% if current_matter.band_connection.present? %>
        <%= link_to 'BANDアルバム', get_album_employees_band_connection_path(current_matter.band_connection, matter_id: current_matter.id), remote: true, class: "btn btn-md btn-primary" %>
      <% end %>
      <%= link_to '画像追加', new_employees_estimate_matter_image_path(current_matter), remote: true, class: "btn btn-md btn-primary" %>
    </div>
    <div id="band_album"></div>
    <div class="mt-1e">
      <h5>取込済画像</h5>
      <div id="image_index">
        <%= render 'employees/matters/images/partial/image' %>
      </div>
    </div>
  </div>
</div>
