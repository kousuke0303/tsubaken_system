<div style="text-align: center;">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header"><button type="button" class="close" data-dismiss="modal">&times;</button></div>
      <div class="modal-body pa-2e">
      <div class="image-update-errors"></div>
        <%= form_with(model: @image, url: employees_matter_image_path(current_matter, @image.id), method: :patch, remote: true) do |f| %>
          <div class="edit-image-content-position">
            <%= f.label :content %>
            <div>
              <%= f.text_area :content, maxlength: 300 %>
            </div>
            
            <%= f.label :shooted_on %>
            <div>
              <%= f.date_field :shooted_on, class: "btn btn-secondary" %>
            </div>
          </div>
          
          <div>
            <%= f.submit '編集する', class: "btn btn-md btn-primary" %>
            <%= link_to "戻る", employees_matter_images_path, class: "btn btn-md btn-primary" %>
          </div>
        
          <% if @image.images.attached? %>
            <% @image.images.each do |image| %>
              <figure class="images-partial" style="margin-top: 20px;">
                <%= image_tag url_for(image.variant(resize: "400x400")) %>
              </figure>
            <% end %>
          <% end %>
        <% end %> 
      </div>
    </div>
  </div>
</div>