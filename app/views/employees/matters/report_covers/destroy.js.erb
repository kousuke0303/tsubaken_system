$("#modal-container").modal("hide");
<% if @responce == "success" %>
  $(".report-cover").html('<%= escape_javascript(render "employees/matters/partial/report_cover") %>');
  $('#button-disp').html('<%= escape_javascript(render 'employees/matters/report_covers/partial/button') %>');
  <%= render "shared/javascript/flash", dom: "#report-cover-flash", key: "success", value: "報告書表紙を削除しました。" %>
<% else %>
  <%= render "shared/javascript/flash", dom: "#report-cover-flash", key: "alert", value: "報告書表紙を削除できませんでした。" %>
<% end %>
$('#modal-container').empty();
