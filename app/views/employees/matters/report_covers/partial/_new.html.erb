<div class="modal-dialog modal-lg non-card-modal">
  <div class="modal-content">
    <div class="modal-header">
      報告書表紙作成
      <button type="button" class="close" data-dismiss="modal">&times;</button></div>
    <div class="modal-body pa-2e">
      <%= form_with(model: @report_cover, url: employees_matter_report_covers_path(@matter), method: :post) do |f| %>
        <%= render "employees/matters/report_covers/partial/form", f: f %>
        <div class="btn-area">
          <%= f.submit "作成", class: "btn btn-dark reset-errors" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= javascript_include_tag "reset_errors.js" %>
