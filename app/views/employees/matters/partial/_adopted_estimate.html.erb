<div class="flex">
  <div class= home_icon>
    <div class="triangle" style="border-bottom-color: <%= @color_code %>"></div>
    <div class="square" style="background: <%= @color_code %>">
      <div class="window">
        <div><p>■■</p><p>■■</p></div>
      </div>
      <div class="text">
        <%= link_to edit_employees_matter_adopted_estimate_path(@matter, @adopted_estimate), remote: true do %>
          <%= @plan_name.name %>
        <% end %>
      </div>                
    </div>      
  </div>  
</div>

<div class="table-responsive">
  <table class="table table-bordered text-nowrap table_line_type">
    <tr>
      <th>項目</th>
      <th>工事名称・素材</th>
      <th>耐用年数</th>
      <th colspan="2">単価</th>
      <th>数量</th>
      <th>計(円)</th>
    </tr>
    <% @adopted_estimate_details.each do |category_id, details| %>
      <tr>
        <td rowspan="<%= details.size %>">
          <%= link_to edit_employees_matter_adopted_estimate_detail_path(@matter, details[0].id), remote: true do %>
            <%= details[0].category_name %>
          <% end %>
        </td>
        <% if details[0].material_id.present? || details[0].construction_id.present? %>
          <td>
            <% if details[0].material_id.present? %>
              <%= link_to detail_object_edit_employees_matter_adopted_estimate_detail_path(@matter, details[0].id), remote: true, class: "object_name" do %>
                <%= details[0].material_name %>
              <% end %>
            <% else %>
              <%= link_to detail_object_edit_employees_matter_adopted_estimate_detail_path(@matter, details[0].id), remote: true, class: "object_name" do %>
                <%= details[0].construction_name %>
              <% end %>
            <% end %>
          </td>
          <td><%= details[0].service_life %></td>
          <td class="money_type"><%= details[0].price %></td>
          <td><%= details[0].unit %></td>
          <td><%= details[0].amount %></td>
          <td class="money_type"><%= details[0].total %></td>
        <% else %>
          <%= empty_td(6) %>
        <% end %>
      </tr>
      <% details.from(1).each do |detail| %>
        <tr>
          <% if detail.material_id.present? || detail.construction_id.present? %>
            <td>
              <% if detail.material_id.present? %>
                <%= link_to detail_object_edit_employees_matter_adopted_estimate_detail_path(@matter, detail.id), remote: true, class: "object_name" do %>
                  <%= detail.material_name %>
                <% end %> 
              <% else %>
                <%= link_to detail_object_edit_employees_matter_adopted_estimate_detail_path(@matter, detail.id), remote: true, class: "object_name" do %>
                  <%= detail.construction_name %>
                <% end %>
              <% end %>
            </td>
            <td><%= detail.service_life %></td>
            <td class="money_type"><%= detail.price %></td>
            <td><%= detail.unit %></td>
            <td><%= detail.amount %></td>
            <td class="money_type"><%= detail.total %></td>
          <% else %>
            <%= empty_td(6) %>
          <% end %>
        </tr>
      <% end %>
    <% end %>
    <tr>        
      <th colspan="5">合計</th>
      <th colspan="2" class="money_type text-right"><%= @adopted_estimate.total_price %>円</th>
    </tr>
    <tr>        
      <td colspan="5">端数値引</td>
      <td colspan="2" class="money_type text-right"><%= @adopted_estimate.discount %>円</td>
    </tr>
    <tr>        
      <th colspan="5">値引後合計</th>
      <th colspan="2" class="money_type text-right"><%= @adopted_estimate.after_discount %>円</th>
    </tr>
  </table>
</div>  

<%= javascript_include_tag "money_type.js" %>
