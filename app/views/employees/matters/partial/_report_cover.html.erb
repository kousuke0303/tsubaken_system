<div class="double-line">
  <h4>表紙</h4>
</div>

<div id="report-cover-flash"></div>

<% if @report_cover.present? %>
  <div class="row report-cover-show text-center">
    <div class="col-xl-3 col-lg-4 col-md-6 mt-05e">
      <% if @cover_img_1.present? %>
        <%= image_tag url_for(@cover_img_1.image.variant(combine_options: { gravity: :center, resize: "200x200^", crop: "200x200+0+0" })) %>
      <% else %>
        <div class="empty-img-msg align-center">画像①<br>未登録</div>
      <% end %>
    </div>
    <div class="col-xl-3 col-lg-4 col-md-6 mt-05e">
      <% if @cover_img_2.present? %>
        <%= image_tag url_for(@cover_img_2.image.variant(combine_options: { gravity: :center, resize: "200x200^", crop: "200x200+0+0" })) %>
      <% else %>
        <div class="empty-img-msg align-center">画像②<br>未登録</div>
      <% end %>
    </div>
    <div class="col-xl-3 col-lg-4 col-md-6 mt-05e">
    <% if @cover_img_3.present? %>
      <%= image_tag url_for(@cover_img_3.image.variant(combine_options: { gravity: :center, resize: "200x200^", crop: "200x200+0+0" })) %>
    <% else %>
      <div class="empty-img-msg align-center">画像③<br>未登録</div>
    <% end %>
    </div>
    <div class="col-xl-3 col-lg-4 col-md-6 mt-05e">
    <% if @cover_img_4.present? %>
      <%= image_tag url_for(@cover_img_4.image.variant(combine_options: { gravity: :center, resize: "200x200^", crop: "200x200+0+0" })) %>
    <% else %>
      <div class="empty-img-msg align-center">画像④<br>未登録</div>
    <% end %>
    </div>
  </div>
<% else %>
  <div class="text-center"><p>登録がありません</p></div>
<% end %>
