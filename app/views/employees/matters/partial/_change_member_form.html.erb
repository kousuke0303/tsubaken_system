<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header"><button type="button" class="close" data-dismiss="modal">&times;</button></div>
    <div class="modal-body pa-2e">
      <div class="card mb-3">
        <h5 class="card-header">担当者変更</h5>
        <div class="card-body">
        <div class="matter-update-errors"></div>
          <%= form_with(model: @matter, url: update_member_employees_matter_path(@matter), method: :patch, local: true) do |f| %>
            <div class="col-md-12">
              <%= f.label "担当スタッフ" %>
              <div>
                <%= f.collection_select :staff_ids, @staffs, :id, :name, { include_hidden: false }, { class: "form-control select-members", multiple: true, id: "staff_select" } %>
              </div>
            </div>
            <div class="col-md-12">
              <%= f.label "担当外部スタッフ" %>
              <div>
                <%= f.collection_select :external_staff_ids, @external_staffs, :id, :name, { include_hidden: false }, { class: "form-control select-members", multiple: true, id: "external_staff_select" } %>
              </div>
            </div>
            <%= f.hidden_field :staff_id, value: @staff.id %>
            <div class="btn-area">
              <%= f.submit "更新", class: "btn btn-dark reset-errors" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= javascript_include_tag "select_members.js" %>
<%= javascript_include_tag "reset_errors.js" %>
