<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header"><button type="button" class="close" data-dismiss="modal">&times;</button></div>
    <div class="modal-body pa-2e">
      <div class="card mb-3">
        <h4 class="modal-header-<%= @task.status %> text-center card-header">タスク担当者変更</h4>
        <div class="pl-1e pr-1e">
          <label class="form-control">タイトル</label>
          <span><%= @task.title %></span>
          <label class="form-control">内容</label>
          <span><%= @task.content %></span>
        </div>
        <div class="card-body">
          <%= form_with(model: @task, url: update_member_employees_matter_task_path(@matter, @task, staff_id: @staff), method: :patch, local: true) do |f| %>
            <div class="task-update-errors"></div>
            
            <h6 class="mt-1e">担当者</h6>
              <div>
                <%= f.select :member, options_for_select(@members.map{ |member|[member[:name], member[:auth] + "#" + member[:id].to_s] }), {include_blank: "選択してください"}, required: true, class: "form-control", id: "member_select" %>
              </div>
            <div class="btn-area">
              <%= f.submit "更新", class: "btn btn-dark reset-errors" %>
              <%= link_to "削除", employees_matter_task_path(@matter, @task, submit_type: "change_member"), method: :delete, data: { confirm: "このタスクを削除してよろしいですか？" }, remote: true, class: "btn btn-danger", id: "destroy-task" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= javascript_include_tag "person_in_charge.js" %>
