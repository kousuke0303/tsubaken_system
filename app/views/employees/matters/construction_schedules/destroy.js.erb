<% if @responce == "success" %>
  $('#matter-show-modal').empty();
  $('#matter-show-modal').modal('hide');
  $('#construction_schedule_table').html('<%= escape_javascript(render 'employees/matters/construction_schedules/partial/table') %>');
  toastr.success('<%= @construction_schedule.title %>を削除しました');
<% else %>
  toastr.warning('<%= @construction_schedule.title %>は削除できません')
<% end %>