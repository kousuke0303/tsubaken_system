<% if @responce == "success" %>
  $('#construction-schedule-modal').modal('hide');
  $('#construction_schedule_table').html('<%= escape_javascript(render 'employees/matters/construction_schedules/partial/table') %>');
  $('#construction-schedule-modal').empty();
  toastr.success('<%= @construction_schedule.title %>の素材を編集しました');
<% else %>
  <%= render "shared/javascript/modal_error", dom: ".construction_schedule-update-for-materials-errors", model: @construction_schedule, object: "construction_schedule" %>
<% end %>