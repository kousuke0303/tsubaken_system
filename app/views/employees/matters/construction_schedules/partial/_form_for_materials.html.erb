<div class="modal-dialog non-card-modal">
  <div class="modal-content">
    <div class="modal-header">
      <%= @construction_schedule.title %>の素材編集
      <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
      <%= form_with(model: @construction_schedule, url: update_for_materials_employees_matter_construction_schedule_path(@matter, @construction_schedule), method: :patch, remote: true) do |f| %>
        <div class="construction_schedule-update-for-materials-errors"></div>
        <%= f.label "素材選択" %>
        <div>
          <%= f.collection_select :material_ids, @all_Materials, :id, :name, { include_hidden: false }, { class: "form-control select-materials", multiple: true, id: "material_select" } %>
        </div>
        <div class="btn-area">
          <%= f.submit "更新", class: "btn btn-dark reset-errors" %>
          <%= link_to "削除", employees_matter_construction_schedule_path(@matter, @construction_schedule), method: :delete, remote: true, class: "btn btn-danger" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  $('.select-materials').select2({
  theme: "bootstrap"
});
</script>