<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header"><button type="button" class="close" data-dismiss="modal">&times;</button></div>
    <div class="modal-body pa-2e">
      <div class="card mb-3">
        <h5 class="card-header">工事・素材編集</h5>
        <div class="card-body">
          <%= form_with(model: @invoice_detail, url: detail_object_update_employees_matter_invoice_detail_path(@matter, @invoice_detail), method: :patch, remote: true) do |f| %>
            <div class="invoice-object-update-errors"></div>
            
            <% if @invoice_detail.material_id.present? %>
              <%= f.label :material_name %>
              <%= f.text_field :material_name, required: true, maxlength: 30, class: "form-control" %>
            <% elsif @invoice_detail.construction_id.present? %>
              <%= f.label :construction_name %>
              <%= f.text_field :construction_name, required: true, maxlength: 30, class: "form-control" %>
            <% end %>

            <%= f.label :service_life %>
            <%= f.text_field :service_life, maxlength: 30, class: "form-control" %>

            <%= f.label :price %>
            <%= f.number_field :price, required: true, class: "form-control" %>

            <%= f.label :amount %><span class="ml-05e">(<%= @invoice_detail.unit %>)</span></%>
            <%= f.number_field :amount, required: true, class: "form-control" %>

            <%= f.label :note %>
            <%= f.text_field :note, maxlength: 30, class: "form-control" %>

            <div class="btn-area">
              <%= f.submit "更新", class: "btn btn-dark reset-errors" %>
              <%= link_to "項目削除", employees_matter_invoice_detail_path(@matter, @invoice_detail, type: "delete_object"), method: :delete,
                                     data: { confirm: "この素材を削除してよろしいですか？" }, remote: true, class: "btn btn-danger" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= javascript_include_tag "reset_errors.js" %>
