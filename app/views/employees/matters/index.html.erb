<div>
  <h2><i class="fas fa-clipboard"></i>案件一覧</h2>
  <div>
    <%= link_to new_employees_matter_path, class: "btn btn-dark mt-1e mb-1e" do %>
        <i class="fas fa-plus"></i> 新規案件作成
    <% end %>
  </div>

  <div>
    <button class="btn matter-select-btn" id="select_progerss">進行案件</button>
    <button class="btn matter-select-btn" id="select_finished">完了案件</button>
  </div>

  <div class="table-responsive">
    <table class="table table-borderd text-nowrap employee_index">
      <thead>
        <tr>
          <th>タイトル</th>
          <th>場所</th>
          <th>顧客</th>
          <th>情報</th>
        </tr>
      </thead>
      
      <tbody id="progress-index" style="display: none;">
      </tbody>
      <tbody id="finished-index" style="display: none;">
      </tbody>
    </table>
  </div>
</div>

<script>
  $("#select_progerss").on("click", function(){
    $("#select-progerss").addClass("active");
    $("#select-finished").removeClass("active");
    $("#progress-index").show();
    $("#finished-index").hide();
  });
  
  $("#select_finished").on("click", function(){
    $("#select-progerss").removeClass("active");
    $("#select-finished").addClass("active");
    $("#progress-index").hide();
    $("#finished-index").show();
  });
</script>
  