<div class="col-lg-12 col-md-12">
  <div class="row">
    <div class="col-lg-9 col-md-8 col-7">
      <h2><i class="fas fa-clipboard"></i> 案件一覧</h2>
    </div>
    <div class="col-lg-3 col-md-4 col-5">  
      <%= form_with(url: employees_matters_path, method: :get, local: true) do |f| %>
        <div class="input-group">
          <%= f.select :status, options_for_select(Matter.statuses.keys.map {|k| [I18n.t("enums.matter.status.#{ k }"), k]},params[:status]), { include_blank: "全ての進行状況" }, { class: "form-control" } %>
          <div class="input-group-append">
            
            <input type="submit" value="&#xf002;" class="fas btn btn-primary" style="padding: 0 0.5em;">
          </div>
        <% end %>
      </div>
    </div>
  </div>
  
  <input type="hidden" name="estimate_matter_id" value="<%= params[:estimate_matter_id] %>" id="estimate_matter_id">
    
  <div class="text-center mt-1e">
    <div>
      <div class="table-responsive">
        <table class="table table-bordered text-nowrap common-table">
          <tr>
            <th>タイトル</th>
            <th>着工予定日</th>
            <th>完了予定日</th>
            <th>進行状況</th>
          </tr>
          
          <% if current_admin || current_manager %>
            <% @matters.each do |matter| %>
              <tr class="tr-link" data-link="<%= employees_matter_path(matter) %>">
              <td><%= matter.title %></td>
              <td><%= matter.scheduled_started_on %></td>
              <td><%= matter.scheduled_finished_on %></td>
              <td><%= I18n.t("enums.matter.status.#{matter.status}") %></td>
              </tr>
            <% end %>
          <% elsif current_staff %>
            <% @staff_matters.each do |staff_matter| %>
              <tr class="tr-link" data-link="<%= employees_matter_path(staff_matter) %>">
              <td><%= staff_matter.title %></td>
              <td><%= staff_matter.scheduled_started_on %></td>
              <td><%= staff_matter.scheduled_finished_on %></td>
              <td><%= I18n.t("enums.matter.status.#{staff_matter.status}") %></td>
              </tr>
            <% end %>
         <% elsif current_external_staff %>
           <% @external_staff_matters.each do |external_staff_matter| %>
              <tr class="tr-link" data-link="<%= employees_matter_path(external_staff_matter) %>">
              <td><%= external_staff_matter.title %></td>
              <td><%= external_staff_matter.scheduled_started_on %></td>
              <td><%= external_staff_matter.scheduled_finished_on %></td>
              <td><%= I18n.t("enums.matter.status.#{external_staff_matter.status}") %></td>
              </tr>
            <% end %>
          <% end %>
        </table>
      </div>
  </div>
</div>

<script>
  $("tr[data-link]").click(function() {
    window.location = $(this).data("link")
  })
</script>
  