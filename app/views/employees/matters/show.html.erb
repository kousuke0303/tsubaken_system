<div class="col-12">
  <div class="row">
    <div class="col-md-6 col-12">
      <h2><i class="fas fa-clipboard"></i> 案件詳細</h2>
    </div>
    <div class="col-md-6 col-12 text-right">
      <%= link_to "画像一覧", employees_matter_images_path(current_matter), target: :_blank, rel: [:noopener, :noreferrer], class: "btn btn-dark" %>
      <%= link_to "チャットルーム", employees_matter_talkrooms_path(@matter), class: "btn btn-primary" %>
    </div>
  </div>

  <div class="card mt-1e">
    <div class="card-header bg-dark tab-wrapper">
      <ul class="nav nav-tabs d-flex flex-column flex-md-row card-header-tabs" id="matters-show-tab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" href="#detail" data-toggle="tab" role="tab" aria-controls="detail" aria-selected="true">詳細情報</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#clients" data-toggle="tab" role="tab" aria-controls="clients" aria-selected="false">顧客情報</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#tasks" data-toggle="tab" role="tab" aria-controls="tasks" aria-selected="false">タスク一覧</a>
        </li>
      </ul>
    </div>
    

    <div class="card-body">
      <div class="tab-content" id="matter-show-tab">
        <div class="tab-pane fade show active bg-white" id="detail" role="tabpanel">
          <%= render "employees/matters/tab_panes/detail" %>
        </div>
        <div class="tab-pane fade bg-white" id="clients" role="tabpane2">
          <div class="clients-matter-index">
            <%= render "employees/clients/tab_panes/detail" %>
          </div>
        </div>
        <div class="tab-pane fade bg-white", id="tasks" role="tabpane3">
          <div class="tasks-index">
            <%= render "employees/matters/tab_panes/tasks" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
