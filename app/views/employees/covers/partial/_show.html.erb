<div class="table-responsive">
  <table class="table text-nowrap table-bordered table-column-type mt-1e">
    <thead>
      <tr>
        <th>画像</th>
        <th>タイトル</th>
        <th>発行元</th>
        <th>メッセージ</th>
        <th></th>
      </tr>
    </thead>
    <% if current_estimate_matter.cover.present? %>
      <tbody>
        <tr>
          <td>
            <% if image = @cover.image %>
              <%= image_tag url_for(image.image.variant(combine_options:{gravity: :center, resize:"50x50^",crop:"50x50+0+0"})) %>
            <% end %>
          </td>
          <td><%= @cover.title %></td>
          <td><%= publisher_name(@cover.publisher_id) %></td>
          <td><%= content_display(@cover.content, 30) %></td>
          <td>
            <%= link_to "編集", edit_employees_estimate_matter_cover_path(current_estimate_matter, @cover),remote: true, class: "btn btn-sm btn-dark" %>
            <%= link_to "削除", employees_estimate_matter_cover_path(current_estimate_matter, @cover), method: :delete, remote: true,
                                data: { confirm: "この診断書を削除してよろしいですか？" }, class: "btn btn-sm btn-danger" %>  
          </td>
        </tr>
      </tbody>
    <% end %>
  </table>
</div>