<ul class="nav nav-tabs title_tab_bar">
  <li class="nav-item">
    <span class="nav-link title_tab" style="font-size: 18px">未成約案件</span>
  </li>
</ul>
<div class="table-responsive">
  <table class="table table-bordered text-nowrap common-table">
    <tr>
      <th>タイトル</th>
      <th>現場住所</th>
      <th>状況</th>
    </tr>
    <% @client_estimate_matters.each do |estimate_matter| %>
      <tr class="tr-link" data-link="<%= employees_estimate_matter_path(estimate_matter) %>">
        <td><%= estimate_matter.title %></td>
        <td><%= estimate_matter.prefecture_code %><%= estimate_matter.address_city %><%= estimate_matter.address_street %></td>
        <td><%= estimate_matter.sales_statuses.last.status_i18n %></td>
      </tr>
    <% end %>
  </table>
</div>
<div class="btn-area">
  <%= link_to new_employees_estimate_matter_path, class: "btn btn-success" do %>
    営業管理案件新規作成
  <% end %>
</div>

<ul class="nav nav-tabs title_tab_bar">
  <li class="nav-item">
    <span class="nav-link title_tab" style="font-size: 18px">成約案件</span>
  </li>
</ul>
<div class="table-responsive">
  <table class="table table-bordered text-nowrap common-table">
    <tr>
      <th>タイトル</th>
      <th>現場住所</th>
    </tr>
    <% @client_matters.each do |matter| %>
      <tr class="tr-link" data-link="<%= employees_matter_path(matter) %>">
        <td><%= matter.title %></td>
        <td><%= matter.prefecture_code %><%= matter.address_city %><%= matter.address_street %></td>
      </tr>
    <% end %>
  </table>
</div>
  
