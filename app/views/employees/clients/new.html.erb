<div>
  <h2>顧客作成</h2>

  <%= form_with(model: @client, url: employees_staffs_path, method: :post, local: true) do |f| %>
    <%= render "shared/error_messages", resource: @client %>

    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", maxlength: 30, required: true, class: "form-control" %>
  
    <%= f.label :gender %>
    <br>
    <%= f.collection_radio_buttons :gender, Client.genders, :first, :last do |b| %>
      <%=  b.radio_button(class: "radio_button") + b.label(class: "radio_button") %>
    <% end %>
    <br>

    <%= f.label :login_id %>
    <%= f.text_field :login_id, autofocus: true, autocomplete: "login_id", maxlength: 10, required: true, class: "form-control" %>
    
    <%= f.label :phone_1 %>
    <%= f.telephone_field :phone_1, autocomplete: "phone_1", class: "form-control", pattern: "^0\[0-9]{2,3}\[0-9]{1,4}\[0-9]{4}$", maxlength: 11, placeholder: "半角数字(ハイフンなし)" %>

    <%= f.label :phone_2 %>
    <%= f.telephone_field :phone_2, autocomplete: "phone_2", class: "form-control", pattern: "^0\[0-9]{2,3}\[0-9]{1,4}\[0-9]{4}$", maxlength: 11, placeholder: "半角数字(ハイフンなし)" %>

    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", maxlength: 254, class: "form-control" %>
    
    <%= f.label :zip_code %>
    <%= f.text_field :zip_code, autofocus: true, autocomplete: "zip_code", maxlength: 7, pattern: "/^\d{7}$/", class: "form-control", placeholder: "半角数字(ハイフンなし)" %>

    <%= f.label :address %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address", maxlength: 50, class: "form-control" %>

    <div class="btn-area">
      <%= f.submit "作成", class: "btn btn-dark" %>
    </div>
  <% end %>

  <% if @client.errors.any? %>
    <script>
      $(document).ready(function() {
        history.pushState("", "", location.href + "/new")
      });
    </script>
  <% end %>
</div>