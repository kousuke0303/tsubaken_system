<div class="card">
  <div class="card-body">
    <%= form_with(model: @client, url: employees_client_path(@client), remote: true) do |f| %>
      <div id="supplier-manager-update-errors"></div>
      <%= render 'clients/registrations/partial/form', f: f %>

      <% if current_admin || current_manager || self_supplier_manager %>
        <div class="btn-area">
          <%= f.submit "更新", class: "btn btn-dark" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<% if current_admin || current_manager || self_supplier_manager %>
  <div class="card mt-1e">
    <div class="card-body">
      <div id="pass-form">
      <%= render 'employees/clients/partial/pass_form' %>
      </div>
    </div>
  </div>
<% end %>


<%= javascript_include_tag 'tableCollapse.js' %>