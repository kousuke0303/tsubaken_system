<div class="row">
  <div class="col-md-6 col-12">
    <%= f.label :name %>
    <%= f.text_field :name, maxlength: 30, required: true, class: "form-control" %>
  </div>
  <div class="col-md-6 col-12">
    <%= f.label :gender %>
    <br>
    <%= f.collection_radio_buttons :gender, Client.genders_i18n, :first, :last do |b| %>
      <%=  b.radio_button(class: "") + b.label(class: "mr-1e") %>
    <% end %>
  </div>
  <div class="col-md-6 col-12">
    <%= f.label :kana %>
    <%= f.text_field :kana, maxlength: 30, required: true, class: "form-control" %>
  </div>
  <% if action_name == "edit" %>
    <div class="col-md-6 col-12">
      <%= f.label :login_id %>
      <%= f.text_field :login_id, maxlength: 12, required: true, class: "form-control" %>
    </div>
  <% end %>
  <div class="col-md-6 col-12">
    <%= f.label :phone_1 %>
    <%= f.telephone_field :phone_1, class: "form-control", pattern: "^0\[0-9]{2,3}\[0-9]{1,4}\[0-9]{4}$", maxlength: 11, placeholder: "半角数字(ハイフンなし)" %>
  </div>
  <div class="col-md-6 col-12">
    <%= f.label :phone_2 %>
    <%= f.telephone_field :phone_2, class: "form-control", pattern: "^0\[0-9]{2,3}\[0-9]{1,4}\[0-9]{4}$", maxlength: 11, placeholder: "半角数字(ハイフンなし)" %>
  </div>
  <div class="col-md-6 col-12">
    <%= f.label :email %>
    <%= f.email_field :email, maxlength: 254, class: "form-control" %>
  </div>
  <div class="col-md-6 col-12">
    <%= f.label :postal_code %>
    <%= f.text_field :postal_code, maxlength: 7, pattern: "^[0-9]{7}$", id: "postcode", placeholder: "半角数字(ハイフンなし)", class: "form-control" %>
  </div>
  <div class="col-md-6 col-12">
    <%= f.label :prefecture_code %>
    <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :name, :name, { prompt: "選択してください" }, id: "prefecture_code", class: "form-control" %>
  </div>
  <div class="col-md-6 col-12">
    <%= f.label :address_city %>
    <%= f.text_field :address_city, id: "address_city", class: "form-control" %>
  </div>
    <div class="col-md-6 col-12">
    <%= f.label :address_street %>
    <%= f.text_field :address_street, id: "address_street", class: "form-control" %>
  </div>
  <div class="col-md-6 col-12">
    <%= f.label :birthed_on %>
    <%= f.date_field :birthed_on, class: "form-control" %>
  </div>
</div>

<%= javascript_include_tag "postal_code_to_address.js" %>
<%= render "shared/javascript/auto_postcode" %>
