<div>
  <h2>顧客編集</h2>

  <%= form_with(model: @client, url: employees_client_path(@client), method: :patch, local: true) do |f| %>
    <%= render "layouts/error_messages", resource: @client %>

    <%= f.label :name %>
    <%= f.text_field :name, autocomplete: "name", maxlength: 30, required: true, class: "form-control" %>
  
    <%= f.label :gender %>
    <br>
    <%= f.collection_radio_buttons :gender, Client.genders, :first, :last do |b| %>
      <%=  b.radio_button(class: "radio_button") + b.label(class: "radio_button") %>
    <% end %>
    <br>

    <%= f.label :login_id %>
    <%= f.text_field :login_id, maxlength: 12, required: true, class: "form-control" %>
    
    <%= f.label :phone_1 %>
    <%= f.telephone_field :phone_1, class: "form-control", pattern: "^0\[0-9]{2,3}\[0-9]{1,4}\[0-9]{4}$", maxlength: 11, placeholder: "半角数字(ハイフンなし)" %>

    <%= f.label :phone_2 %>
    <%= f.telephone_field :phone_2, class: "form-control", pattern: "^0\[0-9]{2,3}\[0-9]{1,4}\[0-9]{4}$", maxlength: 11, placeholder: "半角数字(ハイフンなし)" %>

    <%= f.label :email %>
    <%= f.email_field :email, maxlength: 254, class: "form-control" %>
    
    <%= f.label :zip_code %>
    <%= f.text_field :zip_code, maxlength: 7, pattern: "^[0-9]{7}$", class: "form-control", placeholder: "半角数字(ハイフンなし)" %>

    <%= f.label :address %>
    <%= f.text_field :address, maxlength: 50, class: "form-control" %>

    <%= f.label :birthed_on %>
    <%= f.date_field :birthed_on, class: "form-control" %>

    <div class="btn-area">
      <%= f.submit "更新", class: "btn btn-dark" %>
    </div>
  <% end %>

  <% if @client.errors.any? %>
    <script>
      $(document).ready(function() {
        history.pushState("", "", location.href + "/edit")
      });
    </script>
  <% end %>
</div>