$(".client-update-errors").html('<%= escape_javascript(render "shared/error_messages", resource: @client) %>');
<% @client.errors.messages.keys.each do |key_attribute| %>
  var addDiv = $('<div class="field-with-errors">');
  var addLabel = $('[name="client[<%= key_attribute.intern.to_s %>]"]').prev();
  $('[name="client[<%= key_attribute.intern.to_s %>]"]').wrap(addDiv);
  addLabel.wrap(addDiv);
<% end %>

