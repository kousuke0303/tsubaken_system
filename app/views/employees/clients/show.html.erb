<div>
  <h2>顧客詳細</h2>

  <table class="table table-sm" id="employees-client-table">
    <tr>
      <th>名前</th>
      <td><%= @client.name %></td>
    </tr>
    <tr>
      <th>ログインID</th>
      <td><%= @client.login_id %></td>
    </tr>
    <tr>
      <th>電話番号①</th>
      <td><%= @client.phone_1 %></td>
    </tr>
    <tr>
      <th>電話番号②</th>
      <td><%= @client.phone_2 %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @client.email %></td>
    </tr>
    <tr>
      <th>生年月日</th>
      <td><%= @client.birthed_on %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= @client.zip_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= @client.address %></td>
    </tr>
  </table>
  
  <div><button role="button" id="toggle-clients-matters" class="btn btn-dark">案件一覧を表示</button></div>

  <div id="clients-matters-area"><%= render "matters" %></div>

  <div class="btn-area">
    <%= link_to "編集", edit_employees_client_path(@client), class: "btn btn-dark" %>
    <%= link_to "削除", employees_client_path(@client), method: :delete, data: { confirm: "この顧客を削除してよろしいですか？" }, class: "btn btn-danger" %>
  </div>
</div>

<script>
  const mattersArea = $("#clients-matters-area")
  const btn = $("#toggle-clients-matters")

  // 顧客の案件一覧は非表示にしておく
  mattersArea.hide();

  // 顧客の案件一覧の表示・非表示切替
  btn.click(function() {
    mattersArea.toggle();
    btn.prop("disabled", true);
    btn.prop("disabled", false);
  })
</script>
