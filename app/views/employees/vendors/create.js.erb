$(".vendor-create-errors").html('<%= escape_javascript(render "shared/error_messages", resource: @vendor) %>');
<% @vendor.errors.messages.keys.each do |key_attribute| %>
  var addDiv = $('<div class="field-with-errors">');
  var addLabel = $('[name="vendor[<%= key_attribute.intern.to_s %>]"]').prev();
  $('[name="vendor[<%= key_attribute.intern.to_s %>]"]').wrap(addDiv);
  addLabel.wrap(addDiv);
<% end %>
