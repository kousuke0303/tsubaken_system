$(".department-update-errors").html('<%= escape_javascript(render "shared/error_messages", resource: @department) %>');
<% @department.errors.messages.keys.each do |key_attribute| %>
  var addDiv = $('<div class="field-with-errors">');
  var addLabel = $('[name="department[<%= key_attribute.intern.to_s %>]"]').prev();
  $('[name="department[<%= key_attribute.intern.to_s %>]"]').wrap(addDiv);
  addLabel.wrap(addDiv);
<% end %>
  