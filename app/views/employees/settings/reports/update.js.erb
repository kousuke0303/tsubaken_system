$(".default-report-update-errors").html('<%= escape_javascript(render "shared/error_messages", resource: @report) %>');
<% @report.errors.messages.keys.each do |key_attribute| %>
  var addDiv = $('<div class="field-with-errors">');
  var addLabel = $('[name="report[<%= key_attribute.intern.to_s %>]"]').prev();
  $('[name="report[<%= key_attribute.intern.to_s %>]"]').wrap(addDiv);
  addLabel.wrap(addDiv);
<% end %>