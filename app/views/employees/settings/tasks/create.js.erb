$(".default-task-create-errors").html('<%= escape_javascript(render "shared/error_messages", resource: @default_task) %>');
<% @default_task.errors.messages.keys.each do |key_attribute| %>
  var addDiv = $('<div class="field-with-errors">');
  var addLabel = $('[name="default_task[<%= key_attribute.intern.to_s %>]"]').prev();
  $('[name="default_task[<%= key_attribute.intern.to_s %>]"]').wrap(addDiv);
  addLabel.wrap(addDiv);
<% end %>
 