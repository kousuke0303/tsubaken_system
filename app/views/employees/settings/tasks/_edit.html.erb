<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header"><button type="button" class="close" data-dismiss="modal">&times;</button></div>
    <div class="modal-body pa-2e">
      <div class="card mb-3">
        <h5 class="card-header">デフォルトタスク編集</h5>
        <div class="card-body">
          <%= form_with(model: @task, url: "#", method: :patch, remote: true, id: "edit-default-task-form") do |f| %>
            <div class="default-task-update-errors"></div>
            <%= f.label :title %>
            <%= f.text_field :title, required: true, class: "form-control", maxlength: 30, id: "task-name" %>

            <%= f.label :content %>
            <%= f.text_area :content, required: true, class: "form-control", maxlength: 3000 %>
            
            <div class="btn-area">
              <%= f.submit "更新", class: "btn btn-dark" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
