<% if @responce == "success" %>
  $("#modal-container").modal('hide');
  $('#material_table').html('<%= escape_javascript(render 'employees/settings/estimates/materials/partial/index_table') %>');
  toastr.success("<%= @material.name %>を更新しました");
  $("#modal-container").empty();
<% else @responce == "failure" %>
  <%= render partial: 'shared/javascript/modal_error', locals: {dom: ".material-update-errors", model: @material, object: "material"} %>
<% end %>