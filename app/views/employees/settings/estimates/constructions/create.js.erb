<% if @responce == "success" %>
  $("#modal-container").modal('hide');
  $('#construction_table').html('<%= escape_javascript(render 'employees/settings/estimates/constructions/partial/index_table') %>');
  <%= render partial: "shared/javascript/flash", locals: {dom: ".flash-wrapper", key: "success", value: "#{@construction.name}を作成しました。"} %>
  $("#cmodal-container").empty();
<% else %>
  <%= render partial: 'shared/javascript/modal_error', locals: {dom: ".construction-create-errors", model: @construction, object: "construction"} %>
<% end %>