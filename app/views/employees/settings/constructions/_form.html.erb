<%= f.label :category_id %>
<%= f.collection_select :category_id, Category.all, :id, :name, {}, class: "form-control" %>

<%= f.label :name %>
<%= f.text_field :name, required: true, class: "form-control", maxlength: 40 %>

<%= f.label :price %>
<%= f.number_field :price, class: "form-control", maxlength: 30 %>

<%= f.label :unit %>
<%= f.text_field :unit, class: "form-control", maxlength: 30 %>
            