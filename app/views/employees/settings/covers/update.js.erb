<% if @responce == "success" %>
  $("#certificate-cover-edit").modal('hide');
  $("#certificate-cover-edit").empty();
  $('#certificate_cover').html('<%= escape_javascript(render 'employees/settings/certificates/partial/cover_index')%>');
  <%= render partial: "shared/javascript/flash", locals: {dom: ".flash-wrapper", key: "success", value: "#{@cover.title}を更新しました。"} %>
<% else %>
  <%= render partial: 'shared/javascript/modal_error', locals: {dom: ".cover-update-errors", model: @cover, object: "cover"} %>
<% end %>