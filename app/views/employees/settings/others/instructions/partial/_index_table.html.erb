<div class="table-responsive">
  <table class="table table-bordered text-nowrap common-table">
    <tr>
      <th>タイトル</th>
      <th>内容</th>
      <th></th>
    </tr>
    <% @instructions.each do |instruction| %>
      <tr>
        <td><%= instruction.title %></td>
        <td><%= content_display(instruction.content, 30) %></td>
        <td class="text-center">
          <%= link_to "編集", edit_employees_settings_others_instruction_path(instruction), remote: true, class: "btn btn-sm btn-success" %>
          <%= link_to "削除", employees_settings_others_instruction_path(instruction), method: :delete, remote: true, data: { confirm: "削除してよろしいですか？" }, class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </table>
</div>