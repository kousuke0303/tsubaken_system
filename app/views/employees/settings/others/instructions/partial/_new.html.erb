<div class="modal-dialog non-card-modal">
  <div class="modal-content">
    <div class="modal-header">
      見積書補足説明書項目追加
      <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body pa-2e">
      <%= form_with(model: @instruction, url: employees_settings_others_instructions_path, method: :post, remote: true) do |f| %>
        <div class="instruction-create-errors"></div>
        <%= render "employees/settings/others/instructions/partial/form", f: f %>            
        <div class="btn-area">
          <%= f.submit "作成", class: "btn btn-dark reset-errors" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= javascript_include_tag "reset_errors.js" %>
