<% if @responce == "success" %>
  $("#modal-container").modal('hide');
  $('#instruction-table').html('<%= escape_javascript(render 'employees/settings/others/instructions/partial/index_table') %>');
  <%= render partial: "shared/javascript/flash", locals: {dom: ".flash-wrapper", key: "success", value: "#{@instruction.title}を更新しました。"} %>
  $("#modal-container").empty();
<% else %>
  <%= render partial: 'shared/javascript/modal_error', locals: {dom: ".instruction-update-errors", model: @instruction, object: "instruction"} %>
<% end %>