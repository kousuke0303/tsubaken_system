<div class="col-12">
  <div class="row">
    <div class="col-md-6 col-12">
      <h2>工事カテゴリ一覧</h2>
    </div>
    <div class="col-md-6 col-12">
      <%= link_to new_employees_settings_category_path, remote: true, class: "btn btn-dark float-r" do %>
        <i class="fas fa-plus"></i> 新規工事カテゴリ
      <% end %>
    </div>
  </div>

  <div class="card mt-1e">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered text-nowrap common-table">
          <tr>
            <th>名前</th>
            <th></th>
          </tr>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.name %></td>
              <td>
                <%= link_to "編集", edit_employees_settings_category_path(category), remote: true, class: "btn btn-sm btn-dark" %>
                <%= link_to "削除", employees_settings_category_path(category), method: :delete, data: { confirm: "この工事カテゴリを削除してよろしいですか？" }, class: "btn btn-sm btn-danger" %>
              </td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
