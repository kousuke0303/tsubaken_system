<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header"><button type="button" class="close" data-dismiss="modal">&times;</button></div>
    <div class="modal-body pa-2e">
      <div class="card mb-3">
        <h5 class="card-header">見積書カテゴリ編集</h5>
        <div class="card-body">
          <%= form_with(model: category, url: employees_settings_category_path(category), method: :patch, remote: true) do |f| %>
            <div class="category-update-errors"></div>
            <%= f.label :name %>
            <%= f.text_field :name, required: true, class: "form-control", maxlength: 30 %>
            
            <div class="btn-area">
              <%= f.submit "更新", class: "btn btn-dark" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $("form").submit(function(){
    $("label").each(function(index, element){
      if($(element).parent().hasClass("field-with-errors")){
        $(element).unwrap();
      }
    })
    $("input").each(function(index, element){
      if($(element).parent().hasClass("field-with-errors")){
        $(element).unwrap();
      }
    })
  });
</script>
