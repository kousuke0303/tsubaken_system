$(".industry-create-errors").html('<%= escape_javascript(render partial: "shared/error_messages", locals: { resource: @industry }) %>');
<% @industry.errors.messages.keys.each do |key_attribute| %>
  let addDiv = $('<div class="field-with-errors">');
  let addLabel = $('input[name="industry[<%= key_attribute.intern.to_s %>]"]').prev();
  $('input[name="industry[<%= key_attribute.intern.to_s %>]"]').wrap(addDiv);
  addLabel.wrap(addDiv);
<% end %>
  