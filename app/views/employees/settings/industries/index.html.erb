<div class="col-lg-12 col-md-12">
  <h2>
    業種一覧
    <%= link_to new_employees_settings_industry_path, remote: true, class: "btn btn-dark float-r" do %>
      <i class="fas fa-plus"></i> 新規業種
    <% end %>
  </h2>
  <div class="card text-center tab-wrapper">
    <div class="card-header bg-dark"></div>

    <div class="card-body">
      <table class="table table-sm table common-table">
        <tr>
          <th>名前</th>
          <th></th>
        </tr>
        <% @industries.each do |industry| %>
          <tr>
            <td><%= industry.name %></td>
            <td>
              <%= link_to "編集", edit_employees_settings_industry_path(industry), remote: true, class: "btn btn-sm btn-dark" %>
              <%= link_to "削除", employees_settings_industry_path(industry), method: :delete, data: { confirm: "この業種を削除してよろしいですか？" }, class: "btn btn-sm btn-danger" %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
