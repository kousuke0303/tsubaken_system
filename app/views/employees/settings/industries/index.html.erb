<div>
  <h2>業種一覧</h2>
  <button class="btn btn-dark" data-toggle="modal" data-target="#industry-new">作成</button>
  <table class="table table-sm table" id="employees-industries-table">
    <tr>
      <th>名前</th>
      <th></th>
    </tr>
    <% @industries.each do |industry| %>
      <tr>
        <td><%= industry.name %></td>
        <td>
          <%= link_to "編集", "#", class: "btn btn-sm btn-dark" %>
          <%= link_to "削除", employees_settings_industry_path(industry), method: :delete, data: { confirm: "この業種を削除してよろしいですか？" }, class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </table>
</div>

<div id="industry-new" class="modal fade" role="dialog" aria-labelledby="exampleModalLabel">
  <div class="modal-dialog">
  <!-- モーダルコンテンツ:モーダルに表示させる内容-->
  <div class="modal-content">
    <div class="modal-body pa-2e">
    <!-- &timesは「×ボタン」の表示-->
    <div class="row">
        <div class="col-sm-12 mb-1e">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="col-sm-12">
          <div class="card mb-3">
            <h5 class="card-header user_form_color">User/新規作成</h5>
            <div class="card-body">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>

<script>
  $(function(){
    $("#employee-new-btn").on("click",function() {
      $("#employee-new").fadeIn();
      return false;
    });
    
    $(".js-modal-close").on("click",function() {
      $("#employee-new").fadeOut();
      return false;
    });
    
    $(".close").on("click", function() {
      $("#employee-new").fadeOut();
    });
  });
</script>