<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header"><button type="button" class="close" data-dismiss="modal">&times;</button></div>
    <div class="modal-body pa-2e">
      <div class="card mb-3">
        <h5 class="card-header">発行元編集</h5>
        <div class="card-body">
          <%= form_with(model: @publisher, url: employees_settings_publisher_path(@publisher), method: :patch, remote: true) do |f| %>
            <div class="publisher-update-errors"></div>
            <%= render "employees/settings/publishers/partial/form", f: f %>
            <div class="btn-area">
              <%= f.submit "更新", class: "btn btn-dark reset-errors" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= javascript_include_tag "reset_errors.js" %>
