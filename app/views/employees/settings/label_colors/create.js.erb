$(".label-color-create-errors").html('<%= escape_javascript(render "shared/error_messages", resource: @label_color) %>');
<% @label_color.errors.messages.keys.each do |key_attribute| %>
  var addDiv = $('<div class="field-with-errors">');
  var addLabel = $('[name="label_color[<%= key_attribute.intern.to_s %>]"]').prev();
  $('[name="label_color[<%= key_attribute.intern.to_s %>]"]').wrap(addDiv);
  addLabel.wrap(addDiv);
<% end %>
  