$(".material-create-errors").html('<%= escape_javascript(render "shared/error_messages", resource: @material) %>');
<% @material.errors.messages.keys.each do |key_attribute| %>
  var addDiv = $('<div class="field-with-errors">');
  var addLabel = $('[name="material[<%= key_attribute.intern.to_s %>]"]').prev();
  $('[name="material[<%= key_attribute.intern.to_s %>]"]').wrap(addDiv);
  addLabel.wrap(addDiv);
<% end %>