<% if @responce == "success" %>
  $('.industries-index').html('<%= escape_javascript(render 'employees/settings/companies/industries/partial/index_table') %>');
  <%= render partial: "shared/javascript/flash", locals: {dom: ".flash-wrapper", key: "success", value: "#{@industry.name}を作成しました。"} %>
  $('#industry_create').val("");
<% else %>
  toastr.error("<%= params[:industry][:name] %>は既に存在します");
<% end %>
  