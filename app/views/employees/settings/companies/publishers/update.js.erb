$(".publisher-update-errors").html('<%= escape_javascript(render "shared/error_messages", resource: @publisher) %>');
<% @publisher.errors.messages.keys.each do |key_attribute| %>
  var addDiv = $('<div class="field-with-errors">');
  var addLabel = $('[name="publisher[<%= key_attribute.intern.to_s %>]"]').prev();
  $('[name="publisher[<%= key_attribute.intern.to_s %>]"]').wrap(addDiv);
  addLabel.wrap(addDiv);
<% end %>