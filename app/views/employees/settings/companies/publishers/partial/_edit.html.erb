<div class="modal-dialog wide-modal">
  <div class="modal-content">
    <div class="modal-header"><button type="button" class="close" data-dismiss="modal">&times;</button></div>
    <div class="modal-body pa-2e">
      <div class="card mb-3">
        <h5 class="card-header">屋号編集</h5>
        <div class="card-body">
          <% if @submit_type == "edit" && @publisher.image.attached? %>
            <div class="company_avator_container">
              <%= render 'employees/settings/companies/publishers/partial/company_avator' %>
            </div>
          <% end %>
          <%= form_with(model: @publisher, url: employees_settings_companies_publisher_path(@publisher), method: :patch, remote: true) do |f| %>
            <div class="publisher-update-errors"></div>
            <div id="publisher_edit_form">
              <%= render "employees/settings/companies/publishers/partial/form", f: f %>
            </div>
            <div class="btn-area">
              <%= f.submit "更新", class: "btn btn-dark reset-errors" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= javascript_include_tag "reset_errors.js" %>


