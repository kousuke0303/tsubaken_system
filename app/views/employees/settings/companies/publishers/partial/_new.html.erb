<div class="modal-dialog wide_modal">
  <div class="modal-content">
    <div class="modal-header"><button type="button" class="close" data-dismiss="modal">&times;</button></div>
    <div class="modal-body pa-2e">
      <div class="card mb-3">
        <h5 class="card-header">新規屋号登録</h5>
        <div class="card-body">
          <%= form_with(model: @publisher, url: employees_settings_companies_publishers_path, method: :post, remote: true) do |f| %>
            <div class="publisher-create-errors"></div>
            <%= render "employees/settings/companies/publishers/partial/form", f: f %>
            <div class="btn-area">
              <%= f.submit "作成", class: "btn btn-dark reset-errors" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= javascript_include_tag "reset_errors.js" %>
