<% if @responce == "success" %>
  $("#department-edit").modal("hide");
  $(".departments-index").html('<%= escape_javascript(render "employees/settings/companies/departments/partial/index_table") %>');
  <%= render "shared/javascript/flash", dom: ".flash-wrapper", key: "success", value: "#{ @department.name }を更新しました。" %>
<% else %>
  <%= render "shared/javascript/modal_error", dom: ".department-update-errors", model: @department, object: "department" %>
<% end %> 
  