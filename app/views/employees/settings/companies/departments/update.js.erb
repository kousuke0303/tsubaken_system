<% if @responce == "success" %>
  $("#department-edit").modal('hide');
  $('.departments-index').html('<%= escape_javascript(render 'employees/settings/companies/departments/partial/index_table') %>');
  <%= render partial: "shared/javascript/flash", locals: {dom: ".flash-wrapper", key: "success", value: "#{@department.name}を更新しました。"} %>
<% else %>
  <%= render partial: 'shared/javascript/modal_error', locals: {dom: ".department-update-errors", model: @department, object: "department"} %>
<% end %> 
  