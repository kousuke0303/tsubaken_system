<% if @responce == "success" %>
  $(".departments-index").html('<%= escape_javascript(render "employees/settings/companies/departments/partial/index_table") %>');
  <%= render "shared/javascript/flash", dom: ".flash-wrapper", key: "success", value: "#{ @department.name }を作成しました" %>
  $("#department-create").val("");
<% else %>
  toastr.error("<%= params[:department][:name] %>は既に存在します");
<% end %>
