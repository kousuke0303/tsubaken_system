<% if @responce == "success" %>
  $("#department-new").modal('hide');
  $('.departments-index').html('<%= escape_javascript(render 'employees/settings/companies/departments/partial/index_table') %>');
  <%= render partial: "shared/javascript/flash", locals: {dom: ".flash-wrapper", key: "success", value: "#{@department.name}を作成しました。"} %>
<% else %>
  <%= render partial: 'shared/javascript/modal_error', locals: {dom: ".department-create-errors", model: @department, object: "department"} %>
<% end %>  