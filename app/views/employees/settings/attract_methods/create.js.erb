$(".attract-method-create-errors").html('<%= escape_javascript(render "shared/error_messages", resource: @attract_method) %>');
<% @attract_method.errors.messages.keys.each do |key_attribute| %>
  var addDiv = $('<div class="field-with-errors">');
  var addLabel = $('[name="attract_method[<%= key_attribute.intern.to_s %>]"]').prev();
  $('[name="attract_method[<%= key_attribute.intern.to_s %>]"]').wrap(addDiv);
  addLabel.wrap(addDiv);
<% end %>