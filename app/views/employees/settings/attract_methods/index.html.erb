<div class="col-lg-12 col-md-12">
  <h2>
    集客方法一覧
    <%= link_to new_employees_settings_attract_method_path, remote: true, class: "btn btn-dark float-r" do %>
      <i class="fas fa-plus"></i> 新規集客方法
    <% end %>
  </h2>
  <div class="card text-center tab-wrapper">
    <div class="card-header bg-dark"></div>

    <div class="card-body">
      <table class="table table-sm table-bordered common-table">
        <tr>
          <th>名前</th>
          <th></th>
        </tr>
        <% @attract_methods.each do |attract_method| %>
          <tr>
            <td><%= attract_method.name %></td>
            <td>
              <%= link_to "編集", edit_employees_settings_attract_method_path(attract_method), remote: true, class: "btn btn-sm btn-dark" %>
              <%= link_to "削除", employees_settings_attract_method_path(attract_method), method: :delete, data: { confirm: "この集客方法を削除してよろしいですか？" }, class: "btn btn-sm btn-danger" %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
