<div class="entire-wrapper">

  <!-- Sidebar -->
  <nav id="sidebar">
    <div class="sidebar-header">
      <%= image_tag "logo_image.png", size: "250x50", alt:"ロゴ" %>
    </div>
    
    <div class="user-panel">
      <div class="avator_container_for_sidebar">
        <%= sidebar_avator(current_manager) %><span>MANAGER</span>
      </div>
    </div>

    <ul class="components">
      <%= render 'layouts/layout_type/sidebar_item' %>
    </ul>

    <ul class="list-unstyled CTAs">
      <li>
        <%= link_to "現況一覧", employees_current_situations_path, class: "current_situation", target: :_blank, rel: [:noopener, :noreferrer] %>
      </li>
    </ul>
  </nav>

  <!-- Page Content -->
  <div id="content">
    <div class="container-fluid">
        
      <!-- Header -->
      <nav class="navbar navbar-expand-lg navbar-light bg-light header-nav">   
        <button type="button" id="sidebarCollapse" class="navbar-btn">
          <span></span>
          <span></span>
          <span></span>
        </button>
      
        <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <i class="fas fa-align-justify"></i>
        </button>
            
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
              
          <ul class="nav navbar-nav ml-auto navi-custom">
            <li class="nav-item">
              <%= link_to managers_top_path, class: "nav-link" do %>
                <i class="fas fa-home"></i> Home
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to managers_attendances_path, class: "nav-link" do %>
                <i class="fas fa-clock"></i> 出退勤
              <% end %>
            </li>
            <div class="nav-item dropdown">
              <a href="#" class="nav-link dropdown-toggle session-name" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fas fa-user-alt"></i> <%= current_manager.name %>
              </a>
              <div class="dropdown-menu dropdown-position header-dropdown-menu">
                <%= link_to edit_manager_registration_path, class: "dropdown-item item-link" do %>
                  <i class="fas fa-user-edit"></i> アカウント編集
                <% end %>
                <div class="dropdown-divider"></div>
                <%= link_to destroy_manager_session_path, method: :delete, class: "dropdown-item item-link" do %>
                  <i class="fas fa-sign-out-alt"></i> ログアウト
                <% end %>
              </div>
            </div>
          </ul>
        </div>      
      </nav>
    </div>
          
    <!-- Main-content -->
    <%= render "shared/flash" %>
    <%= yield %>
    <div class="line"></div>
    <div class="debug"><%= debug(params) if Rails.env.development? %></div>
  </div>
</div>

<%= javascript_include_tag "layout.js" %>