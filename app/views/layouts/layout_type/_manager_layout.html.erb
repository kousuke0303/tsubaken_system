              </a>
              <div class="dropdown-menu account_dropdown_menu" aria-labelledby="navbarDropdown">
                <%= link_to manager_path(current_manager), class: "dropdown-item item-link" do %>
                  <i class="fas fa-user-edit"></i> アカウント情報
                <% end %>
                <div class="dropdown-divider"></div>
                <%= link_to destroy_manager_session_path, method: :delete, class: "dropdown-item item-link" do %>
                  <i class="fas fa-sign-out-alt"></i> ログアウト
                <% end %>
              </div>
            </div>
          </ul>
        </div>
      </div>
    </nav>
    
  <!-- Main-content -->
    <div class="flash_container">
      <%= render 'layouts/flash' %>
    </div>  
    <div class="manager_contaioner">
      <%= yield %>
    </div>
    <div class="line"></div>
    <div class="debug">
      <%= debug(params) if Rails.env.development? %>
    </div>
     
  </div>
