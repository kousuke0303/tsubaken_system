  <% if controller_name == "suppliers" && action_name == "index" %>
    <div id="supplier-new" class="modal fade" role="dialog"></div>
  <% elsif controller_name == "suppliers" && action_name == "show" %>
    <div id="supplier-edit" class="modal fade" role="dialog"></div>
  <% end %>
  
  <!--着工案件関連-->
  <% if controller_name == "matters" && action_name == "show" %> 
