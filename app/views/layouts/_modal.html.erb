  <% if controller_name == "staffs" && action_name == "index" %>
    <div id="staff-new" class="modal fade" role="dialog"></div>
  <% elsif controller_name == "staffs" && action_name == "show" %>
    <div id="staff-edit" class="modal fade" role="dialog"></div>
