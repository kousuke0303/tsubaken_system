    <div id="plan-name-new" class="modal fade" role="dialog"></div>
    <div id="plan-name-edit" class="modal fade" role="dialog"></div>
    <div id="category-new" class="modal fade" role="dialog"></div>
    <div id="category-edit" class="modal fade" role="dialog"></div>
    <div id="construction-new" class="modal fade" role="dialog"></div>
    <div id="construction-edit" class="modal fade" role="dialog"></div>
    <div id="material-new" class="modal fade" role="dialog"></div>
    <div id="material-edit" class="modal fade" role="dialog"></div>
  <% end %>

  <!--カラーコードnew・edit-->
  <% if controller_name == "others" && action_name == "index" %>
    <div id="label-color-new" class="modal fade" role="dialog"></div>
    <div id="label-color-edit" class="modal fade" role="dialog"></div>
  <% end %>

  <!--お問合せedit-->
  <% if controller_name == "inquiries" && action_name == "show" %>
    <div id="inquiry-edit" class="modal fade" role="dialog"></div>
  <% end %>
