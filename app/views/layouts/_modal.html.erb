    <div id="industry-edit" class="modal fade" role="dialog"></div>
  <% end %>
  
  <!--診断書new・edit-->
  <div id="certificate-new" class="modal fade" role="dialog"></div>
  <div id="certificate-edit" class="modal fade" role="dialog"></div>
  
