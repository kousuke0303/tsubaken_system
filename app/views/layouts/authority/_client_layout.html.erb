<div class="entire-wrapper">
  
  <!-- Page Content -->
  <div id="content">
    <div class="container-fluid">
     
      <!-- Header -->
      <nav class="navbar navbar-expand-lg navbar-light bg-light header-nav">
        <div class="mobile_type">
          <%= image_tag "abb_d.png", size: "250x50", alt: "ロゴ" %>
        </div>
        
        <button type="button" id="sidebar-collapse" class="navbar-btn">
          <span></span>
          <span></span>
          <span></span>
        </button>
        <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <i class="fas fa-align-justify"></i>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <div class="pc_type">
            <%= image_tag "abb_d.png", size: "250x50", alt: "ロゴ" %>
          </div>
          
          <ul class="nav navbar-nav ml-auto navi-custom">
            <li class="nav-item">
              <%= link_to "#", class: "nav-link" do %>
                <i class="fas fa-home"></i> Home
              <% end %>
            </li>
            <div class="nav-item dropdown">
              <a href="#" class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <%= current_client.name %>
              </a>
              <div class="dropdown-menu dropdown-position header-dropdown-menu">
                <%= link_to edit_client_registration_path, class: "dropdown-item item-link" do %>
                  <i class="fas fa-user-edit"></i> アカウント編集
                <% end %>
                <div class="dropdown-divider"></div>
                <%= link_to "ログアウト", destroy_client_session_path, method: :delete, class: "dropdown-item item-link" %>
              </div>
            </div>
          </ul>
        </div>
      </nav>
    </div>
      
    <!-- Main-content -->
    <%= render "shared/flash" %>
    <%= yield %>
    <div class="line"></div>
    <div class="debug"><%= debug(params) if Rails.env.development? %></div>     
  </div>
</div>

<%= javascript_include_tag "layout.js" %>
