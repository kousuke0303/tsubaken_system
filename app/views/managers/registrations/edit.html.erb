<div class="container">
  <h2>マネージャー編集</h2>
  
  <%= form_with(model: @manager, url: manager_registration_path, local: true) do |f| %>
    <%= render "shared/error_messages", resource: resource %>

    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", maxlength: 30, required: true, class: "form-control" %>

    <%= f.label :employee_id %>
    <%= f.text_field :employee_id, autofocus: true, autocomplete: "employee_id", maxlength: 10, required: true, class: "form-control" %>
    
    <%= f.label :phone %>
    <%= f.telephone_field :phone, class: "form-control", pattern: "^0\[0-9]{2,3}\[0-9]{1,4}\[0-9]{4}$", maxlength: 11, placeholder: "半角数字(ハイフンなし)" %>

    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", maxlength: 254, class: "form-control" %>

    <%= f.label :zip_code %>
    <%= f.text_field :zip_code, autofocus: true, autocomplete: "zip_code", maxlength: 7, pattern: "^\d{7}$", class: "form-control", placeholder: "半角数字(ハイフンなし)" %>

    <%= f.label :address %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address", maxlength: 50, class: "form-control" %>

    <%= f.label :joined_on %>
    <%= f.date_field :joined_on, autofocus: true, autocomplete: "joined_on", class: "form-control" %>

    <%= f.label :resigned_on %>
    <%= f.date_field :resigned_on, autofocus: true, autocomplete: "resigned_on", class: "form-control" %>

    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "new-password", maxlength: 12, class: "form-control" %>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", maxlength: 12, class: "form-control" %>

    <div class="btn-area">
      <%= f.submit "編集", class: "btn btn-dark" %>
    </div>
  <% end %>
</div>

<% if @manager.errors.any? %>
  <script type="text/javascript">
    $(document).ready(function() {
      history.pushState("", "", location.href + "/edit")
    });
  </script>
<% end %>