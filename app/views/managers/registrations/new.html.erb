<div class="manager_create_backgroud">
  <div class="manager_create_container">
    <h2><i class="fas fa-user-alt"></i> アカウント新規作成</h2>
    <div class="line-sm"></div>
  
    <%= form_with(model:@manager, url: manager_registration_path) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
  
      <div class="form-group">
        <%= f.label :company, "会社名" %>
        <%= f.text_field :company, autofocus: true, autocomplete: "company", class: "form-control" %>
      </div>
    
      <div class="form-group">
        <%= f.label :name, "名前" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
      </div>
    
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    
      <div class="row">
        <div class="form-group col-md-6">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>
    
        <div class="form-group col-md-6">
          <%= f.label :password_confirmation, "パスワード再入力" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>
      </div>
  
      <div class="">
        <%= f.submit "Sign up", class: "btn btn-dark" %>
        <%= link_to "戻る", root_path, class: "btn btn-dark" %>
      </div>
    <% end %>

  </div>
</div>
