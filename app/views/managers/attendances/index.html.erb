<div> 
  <div class="center">
    <h2>
      <%= link_to "＜＜", managers_attendances_path(date: @first_day.prev_month.beginning_of_month), class: "btn btn-dark" %>
      <%= @first_day.strftime("%Y年%m月") %>　出退勤一覧
      <%= link_to "＞＞", managers_attendances_path(date: @first_day.next_month.beginning_of_month), class: "btn btn-dark" %>
    </h2>
  </div>

  <div class="center">
    <%= link_to "出勤", "#", class: "btn btn-dark btn-lg" %>
  </div>

  <table class="table table-sm mt-1e" id="monthly-attendances-table">
    <tr>
      <th>日付</th>
      <th>出勤時間</th>
      <th>退勤時間</th>
    </tr>
    <% @attendances.each do |attendance| %>
      <tr>
        <td><%= attendance.worked_on %></td>
        <td><%= attendance.started_at %></td>
        <td><%= attendance.finished_at %></td>
      </tr>
    <% end %>
  </table>
</div>