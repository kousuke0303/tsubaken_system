$('.user_update_error').html('<%= escape_javascript(render partial: 'layouts/error_messages', locals: { resource: @user }) %>');
<% @user.errors.messages.keys.each do |key_attribute| %>
  var add_div = $('<div class="field_with_errors">');
  var add_label = $('input[name="user[<%= key_attribute.intern.to_s %>]"]').prev();
  $('input[name="user[<%= key_attribute.intern.to_s %>]"]').wrap(add_div);
  add_label.wrap(add_div);
<% end %>