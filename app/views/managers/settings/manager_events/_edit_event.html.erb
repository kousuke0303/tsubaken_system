<div class="modal-dialog">
  <!-- モーダルコンテンツ:モーダルに表示させる内容-->
  <div class="modal-content">
    <div class="modal-body pa-2e">
    <!-- &timesは「×ボタン」の表示-->
      <div class="row">
        <div class="col-sm-12 mb-1e">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="col-sm-12">
        <div class="card mb-3">
          <h5 class="card-header">Event/編集</h5>
            <div class="card-body">
              <%= form_with(model: [:event,event ], url: settings_event_path(event), method: :patch, remote: true) do |f| %>

                <div class="form-group">
                  <%= f.label :event_name, "イベントタイトル" %>
                  <%= f.text_field :event_name , required: true, class: "form-control" %>
                </div>
                
                <div class="form-group">
                  <%= f.label :date, "日付" %>
                  <%= f.date_field :date, required: true, class: "form-control" %>
                </div>

                <div class="form-group">
                  <%= f.label :note, "詳細" %>
                  <%= f.text_area :note, class: "form-control" %>
                </div>

                <%= f.submit "更新", class: "btn btn-dark" %>
                <%= link_to "削除", settings_event_path(event), data: {confirm: "#{event.event_name}を削除しますか？"}, method: :delete,class: "btn btn-destroy" %>
              <% end %>          
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

