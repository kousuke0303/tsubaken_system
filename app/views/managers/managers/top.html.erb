<div class="col-lg-12 col-md-12">
  <!--▼出退勤ボタンの表示-->
  <div>
    <ul class="nav nav-tabs title_tab_bar">
      <li class="nav-item">
        <a class="nav-link attendance_tab">本日の出退勤</a>
      </li>
    </ul>
    <div class="mt-1e text-center">
      <%= render partial: "common_layouts/attendances/top_attendance", locals: { target: current_manager, attendance: @attendance, path: :managers_attendance_path } %>
    </div>
  </div>
  
  <!--警告コンテナ-->
  <div>
    <ul class="nav nav-tabs title_tab_bar">
      <li class="nav-item">
        <a class="nav-link warning_tab">警告事項</a>
      </li>
    </ul>
    <div class="news_container">
      <div class="top_page_contents">
      <!--足場・発注懈怠勧告-->
        <% if @scaffolding_and_order_requests_relevant_or_ongoing.count > 0 %>
          <p><i class="fas fa-exclamation-circle fa-orange"></i>
            <span><%= link_to "足場架設依頼/発注依頼が残っております：#{ @scaffolding_and_order_requests_relevant_or_ongoing.count }件", managers_index_path, remote: true %></span>
          </p>
        <% end %>
      <!--出退勤関係-->
        <% if @error_attendances %>
          <% @error_attendances.each do |error_attendance| %>
            <p><i class="fas fa-exclamation-circle fa-orange"></i>
              <span>
                <%= link_to daily_employees_attendances_path(date: Date.today - 1) do %>
                  <%= object_user_name(error_attendance) %>さんの昨日の退勤処理が未処理です
                <% end %>
              </span>
            </p>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  
  
  <!--▼新着情報コンテナ-->
  <ul class="nav nav-tabs title_tab_bar mt-2e">
    <li class="nav-item">
      <a class="nav-link title_tab">新着情報</a>
    </li>
  </ul>
  
  <div class="news_container">
    新着情報なしの場合
    <p>新着情報はありません</p>
    新着情報ありの場合
    <div class="top_page_contents">
      <p><i class="fas fa-exclamation-circle fa-blue"></i>
        <span>新規顧客が追加されました</span>
      </p>
      <p><i class="fas fa-exclamation-circle fa-blue"></i>
        <span>新規案件が登録されました</span>
      </p>
      <p><i class="fas fa-exclamation-circle"></i>
        <span>○○が現場に到着しました</span>
      </p>
      <p><i class="fas fa-exclamation-circle fa-orange"></i>
        <span>案件○○のタスク○○が完了しました</span>
      </p>
    </div>
  </div>
  
  <!--ghanttcart-->
  <ul class="nav nav-tabs title_tab_bar">
    <li class="nav-item">
      <a class="nav-link title_tab">GanttChart</a>
    </li>
  </ul>
  <div class="mt-1e">
    <!--<!%= render 'matter/ganttchart/index' %>-->
  </div>

</div>
