var dom = "<%= dom %>";
$(dom).html('<%= escape_javascript(render "shared/error_messages", resource: model) %>');
<% model.errors.messages.keys.each do |key_attribute| %>
  var addDiv = $('<div class="field-with-errors">');
  var addLabel = $('[name="<%= object %>[<%= key_attribute.intern.to_s %>]"]').prev();
  $('[name="<%= object %>[<%= key_attribute.intern.to_s %>]"]').wrap(addDiv);
  addLabel.wrap(addDiv);
<% end %>