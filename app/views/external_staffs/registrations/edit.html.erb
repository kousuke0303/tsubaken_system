<div class="col-md-12">
  <%= render partial: 'layouts/page_title', locals: { title_1: "アカウント", title_2: "#{current_external_staff.name} の編集", icon: "fa-user-edit"} %>
  
  <div class="avator_container">
    <%= render partial: 'common_layouts/avators/avator', locals:{login_user: current_external_staff, 
                                                                 edit_path: :external_staffs_avator_change_path,
                                                                 destroy_path: :external_staffs_avator_destroy_path} %>
  </div>
  
  <div class="card">
    <div class="card-body">
      <%= form_with(model: @external_staff, url: external_staff_registration_path(@external_staff), local: true) do |f| %>
        <%= render "shared/error_messages", resource: resource %>

        <%= f.label :name %>
        <%= f.text_field :name, maxlength: 30, required: true, class: "form-control" %>

        <%= f.label :login_id %>
        <%= f.text_field :login_id, minlength: 6, maxlength: 12, required: true, class: "form-control" %>
        
        <%= f.label :phone %>
        <%= f.telephone_field :phone, class: "form-control", pattern: "^0\[0-9]{2,3}\[0-9]{1,4}\[0-9]{4}$", maxlength: 11, placeholder: "半角数字(ハイフンなし)" %>

        <%= f.label :email %>
        <%= f.email_field :email, maxlength: 254, class: "form-control" %>

        <%= f.label :password %>
        <%= f.password_field :password, maxlength: 12, class: "form-control" %>

        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, maxlength: 12, class: "form-control" %>

        <div class="btn-area">
          <%= f.submit "更新", class: "btn btn-dark reset-errors" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= javascript_include_tag "reset_errors.js" %>

<% if @external_staff.errors.any? %>
  <script>
    $(document).ready(function() {
      history.pushState("", "", location.href + "/edit")
    });
  </script>
<% end %>
