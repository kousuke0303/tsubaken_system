<% if @result == "success" %>
  $(".calendar_container").html('<%= escape_javascript( render "external_staffs/schedules/partial/calendar" ) %>'); 
  $("#schedules_detail").html('<%= escape_javascript( render "external_staffs/schedules/partial/schedules_detail" ) %>'); 
  $("#schedule-edit").modal("hide");
  toastr.success("<%= @schedule.title %>を更新しました");
<% else %>
  <%= render partial: 'shared/javascript/modal_error', locals: {dom: ".schedule-edit-errors", model: @schedule, object: "schedule"} %>
<% end %>