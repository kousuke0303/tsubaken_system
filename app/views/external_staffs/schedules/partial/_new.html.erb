<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    
    <div class="modal-body pa-2e">
      <div class="card mb-3">
        <h5 class="card-header">予定追加</h5>
        <div class="card-body">
          <%= form_with(model: @schedule, url: external_staffs_schedules_path, method: :post, remote: true) do |f| %>
            <div class="schedule-create-errors"></div>
              <%= render 'external_staffs/schedules/partial/form', f: f %>
            <div class="btn-area">
              <%= f.submit "登録", class: "btn btn-dark" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    
  </div>
</div>