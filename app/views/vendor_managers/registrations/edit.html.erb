<div class="col-md-12">
  <%= render partial: 'layouts/page_title', locals: { title_1: "アカウント", title_2: "#{current_supplier_manager.name} の編集", icon: "fa-user-edit"} %>
  
  <div class="avator_container">
    <%= render partial: 'common_layouts/avators/avator', locals:{login_user: current_supplier_manager, 
                                                                 edit_path: :supplier_managers_avator_change_path,
                                                                 destroy_path: :supplier_managers_avator_destroy_path} %>
  </div>
  
  <div class="double-line">
    <h4>会社情報</h4>
    <div class="card">
      <div class="card-body">
        <%= form_with(model: @supplier, url: supplier_managers_supplier_path(@supplier), local: true, method: :patch) do |f| %>
          <%= render "shared/error_messages", resource: @supplier %>
          <%= render 'supplier_managers/registrations/partial/supplier_form', f: f %>
          <div class="btn-area">
            <%= f.submit "更新", class: "btn btn-dark reset-errors" %>
          </div>
        <% end %>
      </div>
    </div>
    
    <h4 class="mt-1e">代表者情報</h4>
    <div class="card">
      <div class="card-body">
        <%= form_with(model: @supplier_manager, url: supplier_manager_registration_path, local: true) do |f| %>
          <%= render "shared/error_messages", resource: @supplier_manager %>
          <%= render 'supplier_managers/registrations/partial/form', f: f %>
          <div class="btn-area">
            <%= f.submit "更新", class: "btn btn-dark reset-errors" %>
          </div>
        <% end %>
      </div>
    </div>
    
  </div>
</div>

<%= javascript_include_tag "reset_errors.js" %>

<% if @supplier_manager.errors.any? %>
  <script>
    $(document).ready(function() {
      history.pushState("", "", location.href + "/edit")
    });
  </script>
<% else %>
  <%= javascript_include_tag "postal_code_to_address.js" %>
<% end %>