<div class="modal-dialog non-card-modal">
  <div class="modal-content">
  <div class="modal-header">
    <%= @vendor.name %>STAFF作成
    <button type="button" class="close" data-dismiss="modal">&times;</button>
  </div>
  <div class="modal-body pa-2e">
    
    <%= form_with(model: @external_staff, url: vendor_managers_staffs_path, method: :post, remote: true) do |f| %>
      <div class="external-staff-create-errors"></div>
      <%= render "vendor_managers/staffs/partial/form", f: f %>
      <div class="btn-area">
        <%= f.submit "作成", class: "btn btn-dark reset-errors" %>
      </div>
    <% end %>
    
  </div>
</div>

<%= javascript_include_tag "reset_errors.js" %>
