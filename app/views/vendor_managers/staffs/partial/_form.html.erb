<div class="row">
  
  <label class="form-control text-white" style="background:#787a7b;">名前・その他</label>
  <div class="col-12">
    <%= f.label :name %>
    <%= f.text_field :name, maxlength: 30, required: true, class: "form-control" %>
  </div>
  <div class="col-12">
    <%= f.label :kana %>
    <%= f.text_field :kana, maxlength: 30, required: true, class: "form-control" %>
  </div>
  
  <label class="form-control text-white" style="background:#787a7b;">連絡先等</label>
  <div class="col-12">
    <%= f.label :phone %>
    <%= f.telephone_field :phone, class: "form-control", pattern: "^0\[0-9]{2,3}\[0-9]{1,4}\[0-9]{4}$", maxlength: 11, placeholder: "半角数字(ハイフンなし)" %>
  </div>
  <div class="col-12">
    <%= f.label :email %>
    <%= f.email_field :email, maxlength: 254, class: "form-control" %>
  </div>

</div>